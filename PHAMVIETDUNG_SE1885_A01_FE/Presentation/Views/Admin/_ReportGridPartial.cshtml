@model PHAMVIETDUNG_SE1885_A01_FE.Presentation.ViewModels.ReportResultViewModel

@{
    var currentPage = ViewData["CurrentPage"] as int? ?? 1;
    var totalPages = ViewData["TotalPages"] as int? ?? 1;
}

<div class="row mb-4">
    <div class="col-md-4">
        <div class="card text-white bg-info mb-3">
            <div class="card-body">
                <h5 class="card-title">Total Articles</h5>
                <p class="card-text display-6">@Model.TotalRecords</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-success mb-3">
            <div class="card-body">
                <h5 class="card-title">Active Articles</h5>
                <p class="card-text display-6">@Model.ActiveCount</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-secondary mb-3">
            <div class="card-body">
                <h5 class="card-title">Inactive Articles</h5>
                <p class="card-text display-6">@Model.InactiveCount</p>
            </div>
        </div>
    </div>
</div>

<div class="row">
    @if (Model.Articles != null && Model.Articles.Any())
    {
        @foreach (var item in Model.Articles)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100 shadow-sm border-@((item.NewsStatus == true) ? "success" : "secondary" )">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <span class="badge bg-primary">@(item.CategoryName ?? item.CategoryId.ToString())</span>
                            @if (item.NewsStatus == true)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactive</span>
                        }
                    </div>
                    <div class="card-body">
                        <h5 class="card-title text-truncate">@item.NewsTitle</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@item.Headline</h6>
                        <p class="card-text small text-muted">
                            <strong>Author:</strong> @(item.CreatedByName ?? item.CreatedById.ToString()) <br/>
                            <strong>Date:</strong> @item.CreatedDate?.ToString("MMM dd, yyyy HH:mm")
                        </p>
                        <p class="card-text text-truncate">
                            @item.NewsContent
                        </p>
                    </div>
                    <div class="card-footer bg-transparent">
                            <small class="text-muted">Source: @item.NewsSource</small>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="alert alert-warning text-center">No news articles found matching the criteria.</div>
        </div>
    }
</div>

@if (totalPages > 1)
{
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                <a class="page-link" href="#" onclick="filterReport(@(currentPage - 1)); return false;">Previous</a>
            </li>
            @for (int i = 1; i <= totalPages; i++)
            {
                <li class="page-item @(currentPage == i ? "active" : "")">
                    <a class="page-link" href="#" onclick="filterReport(@i); return false;">@i</a>
                </li>
            }
            <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                <a class="page-link" href="#" onclick="filterReport(@(currentPage + 1)); return false;">Next</a>
            </li>
        </ul>
    </nav>
}
