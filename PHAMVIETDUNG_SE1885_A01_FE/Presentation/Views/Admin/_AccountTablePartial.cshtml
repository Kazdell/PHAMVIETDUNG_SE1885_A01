@model IEnumerable<PHAMVIETDUNG_SE1885_A01_FE.Presentation.ViewModels.SystemAccountViewModel>

<table class="table table-hover mb-0">
    <thead class="bg-light">
        <tr>
            <th class="ps-4">Name</th>
            <th>Email</th>
            <th>Role</th>
            <th class="text-end pe-4">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model) {
                <tr>
                    <td class="ps-4 fw-medium text-dark">@item.AccountName</td>
                    <td class="text-muted">@item.AccountEmail</td>
                    <td>
                        @if(item.AccountRole == 1) { <span class="badge bg-info-subtle text-info-emphasis border rounded-pill">Staff</span> }
                        else if(item.AccountRole == 2) { <span class="badge bg-secondary-subtle text-secondary-emphasis border rounded-pill">Lecturer</span> }
                        else if(item.AccountRole == 0) { <span class="badge bg-danger-subtle text-danger-emphasis border rounded-pill">Admin</span> }
                        else { @item.AccountRole }
                    </td>
                    <td class="text-end pe-4">
                        <div class="btn-group">
                            <button type="button" onclick="loadModal('@Url.Action("Edit", "Admin", new { id = item.AccountId })', 'Edit System Account')" class="btn btn-sm btn-outline-warning" title="Edit"><i class="bi bi-pencil"></i></button>
                            <a asp-action="Delete" asp-route-id="@item.AccountId" class="btn btn-sm btn-outline-danger" title="Delete"><i class="bi bi-trash"></i></a>
                        </div>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center py-4 text-muted">
                    <i class="bi bi-inbox fs-4 d-block mb-2"></i>
                    No accounts found.
                </td>
            </tr>
        }
    </tbody>
</table>

@if (ViewBag.TotalPages > 1)
{
    <div class="px-4 py-3 border-top">
        <nav aria-label="Page navigation">
            <ul class="pagination mb-0 justify-content-center">
                <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link border-0" href="#" onclick="filterAccounts(@(ViewBag.CurrentPage - 1)); return false;">Previous</a>
                </li>
                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                        <a class="page-link border-0 rounded-circle mx-1" href="#" onclick="filterAccounts(@i); return false;">@i</a>
                    </li>
                }
                <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                    <a class="page-link border-0" href="#" onclick="filterAccounts(@(ViewBag.CurrentPage + 1)); return false;">Next</a>
                </li>
            </ul>
        </nav>
    </div>
}
