@model IEnumerable<PHAMVIETDUNG_SE1885_A01_FE.Presentation.ViewModels.SystemAccountViewModel>

@{
    ViewData["Title"] = "Manage Accounts";
}

<div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4 gap-3 animate__animated animate__fadeInDown">
    <div>
        <h1 class="h3 fw-bold mb-1 text-dark">
            <i class="bi bi-people-fill text-primary me-2"></i>Manage Accounts
        </h1>
        <p class="text-muted mb-0">Administer system users, roles, and permissions.</p>
    </div>
    <button type="button" onclick="loadModal('@Url.Action("Create", "Admin")', 'Create System Account')" 
            class="btn btn-primary rounded-pill shadow-sm px-4 fw-medium hover-lift">
        <i class="bi bi-person-plus-fill me-2"></i>New Account
    </button>
</div>

<!-- Filter Bar -->
<div class="card shadow-sm border-0 rounded-4 mb-4 animate__animated animate__fadeInUp bg-white">
    <div class="card-body p-3">
        <div class="row g-3 align-items-center">
            <div class="col-md-6 col-lg-5">
                <div class="position-relative">
                    <i class="bi bi-search position-absolute top-50 start-0 translate-middle-y ms-3 text-muted"></i>
                    <input type="text" id="searchInput" class="form-control rounded-pill ps-5 bg-light border-0" 
                           placeholder="Search by name or email..." onkeyup="filterAccounts(1)">
                </div>
            </div>
            <div class="col-md-4 col-lg-3">
                <div class="form-floating">
                    <select id="roleFilter" class="form-select border-0 bg-light rounded-3" onchange="filterAccounts(1)" style="padding-top: 1.625rem;">
                        <option value="">All Roles</option>
                        <option value="0">Administrator</option>
                        <option value="1">Staff Member</option>
                        <option value="2">Lecturer</option>
                    </select>
                    <label for="roleFilter" class="text-muted opacity-75 small">Filter by Role</label>
                </div>
            </div>
             <div class="col-md-2 d-none d-lg-block ms-auto text-end">
                 <span class="text-muted small"><i class="bi bi-arrow-repeat me-1"></i>Auto-updates</span>
            </div>
        </div>
    </div>
</div>

<!-- Table Container -->
<div class="card shadow-lg border-0 rounded-4 overflow-hidden animate__animated animate__fadeInUp animate__delay-1s">
    <div id="accountTableContainer" class="card-body p-0">
        <partial name="_AccountTablePartial" model="Model" />
    </div>
</div>

<!-- Modal Container (Shared) -->
<div class="modal fade" id="actionModal" tabindex="-1" aria-labelledby="actionModalLabel" aria-hidden="true">
    <div id="modal-placeholder"></div>
</div>

<style>
    .hover-lift { transition: transform 0.2s, box-shadow 0.2s; }
    .hover-lift:hover { transform: translateY(-2px); box-shadow: 0 5px 15px rgba(0,0,0,0.1); }
    .form-control:focus, .form-select:focus { box-shadow: none; background-color: #fff !important; ring: 2px solid var(--bs-primary); }
</style>

@section Scripts {
    <script>
        function filterAccounts(page) {
            const search = $('#searchInput').val();
            const role = $('#roleFilter').val();
            const url = `@Url.Action("FilterAccounts", "Admin")?page=${page}&search=${search}&role=${role}`;
            
            // Add loading state opacity
            $('#accountTableContainer').css('opacity', '0.6');
            
            $.get(url, function (data) {
                $('#accountTableContainer').html(data).css('opacity', '1');
            }).fail(function () {
                console.error('Failed to load data.');
                $('#accountTableContainer').css('opacity', '1');
            });
        }
        
        if (typeof loadModal === 'undefined') {
            window.loadModal = function(url, title) {
                $.get(url, function (data) {
                    $('#modal-placeholder').html(data);
                    
                    const modalEl = document.getElementById('actionModal');
                    const modal = new bootstrap.Modal(modalEl);
                    modal.show();
                    
                    bindModalForm();
                     
                     $.validator.unobtrusive.parse("#actionModal form");
                });
            }
        }

        function bindModalForm() {
            $('form.modal-form').off('submit').on('submit', function (e) {
                e.preventDefault();
                var form = $(this);
                if (!form.valid()) return false;

                // Button loading state
                var btn = form.find('button[type="submit"]');
                var originalText = btn.html();
                btn.prop('disabled', true).html('<span class="spinner-border spinner-border-sm me-2"></span>Processing...');

                $.ajax({
                    url: form.attr('action'),
                    type: form.attr('method'),
                    data: form.serialize(),
                    success: function (res) {
                        if (res.success) {
                            $('#actionModal').modal('hide');
                            filterAccounts(1); // Refresh table without reload
                            // Optional: Show success toast
                        } else {
                            $('#modal-placeholder').html(res);
                            bindModalForm();
                        }
                    },
                    error: function () {
                        // Restore button
                         btn.prop('disabled', false).html(originalText);
                        alert('An error occurred.');
                    }
                });
            });
        }
    </script>
}


