@model IEnumerable<PHAMVIETDUNG_SE1885_A01_FE.Presentation.ViewModels.SystemAccountViewModel>

@{
    ViewData["Title"] = "Account Management";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-1">Account Management</h1>
        <p class="text-muted mb-0">Manage system users and roles</p>
    </div>
    <button type="button" onclick="loadModal('@Url.Action("Create", "Admin")', 'Create New Account')" class="btn btn-primary d-flex align-items-center gap-2 px-4 shadow-sm">
        <i class="bi bi-person-plus"></i> 
        <span>New Account</span>
    </button>
</div>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card shadow-sm border-0 mb-4">
    <div class="card-body bg-light rounded-top border-bottom">
        <div class="row g-3">
             <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-text bg-white border-end-0"><i class="bi bi-search text-muted"></i></span>
                    <input type="text" id="searchKeyword" class="form-control border-start-0 ps-0" placeholder="Search by name or email..." onkeyup="debounceFilter()">
                </div>
            </div>
             <div class="col-md-3">
                <select id="searchRole" class="form-select" onchange="filterAccounts(1)">
                    <option value="">All Roles</option>
                    <option value="0">Admin</option>
                    <option value="1">Staff</option>
                    <option value="2">Lecturer</option>
                </select>
            </div>
             <div class="col-md-2">
                <button class="btn btn-outline-secondary w-100" onclick="resetFilters()">Reset</button>
            </div>
        </div>
    </div>
    
    <div id="accountTableContainer" class="card-body p-0">
          <partial name="_AccountTablePartial" model="Model" />
    </div>
</div>

<!-- Modal Container (Shared) -->
<div class="modal fade" id="actionModal" tabindex="-1" aria-labelledby="actionModalLabel" aria-hidden="true">
    <div id="modal-placeholder"></div>
</div>

@section Scripts {
    <script>
        let debounceTimer;

        function debounceFilter() {
            clearTimeout(debounceTimer);
            debounceTimer = setTimeout(() => filterAccounts(1), 500);
        }

        function filterAccounts(page) {
            const keyword = document.getElementById('searchKeyword').value;
             const role = document.getElementById('searchRole').value;
            const url = `@Url.Action("FilterAccounts", "Admin")?page=${page}&keyword=${encodeURIComponent(keyword)}&role=${role}`;

            $.get(url, function (data) {
                $('#accountTableContainer').html(data);
            }).fail(function () {
                alert('Failed to load data.');
            });
        }

        function resetFilters() {
            document.getElementById('searchKeyword').value = '';
            document.getElementById('searchRole').value = '';
            filterAccounts(1);
        }
    </script>
}
