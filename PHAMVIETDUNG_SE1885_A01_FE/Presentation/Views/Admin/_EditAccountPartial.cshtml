@model PHAMVIETDUNG_SE1885_A01_FE.Presentation.ViewModels.SystemAccountViewModel

<div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
        <div class="modal-header bg-primary text-white">
            <h5 class="modal-title" id="actionModalLabel">Edit Account</h5>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <form asp-action="Edit" class="modal-form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="AccountId" />
                <div class="form-group mb-3">
                    <label asp-for="AccountName" class="control-label fw-semibold mb-1">Full Name</label>
                    <input asp-for="AccountName" class="form-control" />
                    <span asp-validation-for="AccountName" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                        <label asp-for="AccountEmail" class="control-label fw-semibold mb-1">Email Address</label>
                    <input asp-for="AccountEmail" class="form-control" />
                    <span asp-validation-for="AccountEmail" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                        <label asp-for="AccountRole" class="control-label fw-semibold mb-1">Role</label>
                        <select asp-for="AccountRole" class="form-select">
                        <option value="1">Staff</option>
                        <option value="2">Lecturer</option>
                        <option value="0">Admin</option>
                    </select>
                    <span asp-validation-for="AccountRole" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                        <label asp-for="AccountPassword" class="control-label fw-semibold mb-1">Password</label>
                    <input asp-for="AccountPassword" type="text" class="form-control" placeholder="Leave empty to keep current" />
                    <span asp-validation-for="AccountPassword" class="text-danger"></span>
                </div>
                
                <div class="d-flex justify-content-end gap-2 mt-4">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary px-4">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
