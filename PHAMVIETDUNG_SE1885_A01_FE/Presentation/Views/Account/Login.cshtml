@{
    ViewData["Title"] = "Login";
}

@using Microsoft.AspNetCore.Http
@{
    ViewData["Title"] = "Login";
}

<div class="d-flex min-vh-100 align-items-center justify-content-center bg-light py-5">
    <div class="row w-100 shadow-lg rounded-4 overflow-hidden bg-white" style="max-width: 1000px; min-height: 600px;">
        
        <!-- Left Column: Branding / Education Artwork -->
        <div class="col-lg-6 d-none d-lg-flex flex-column align-items-center justify-content-center text-white position-relative p-5" 
             style="background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-hover) 100%);">
            
            <!-- Abstract Shapes Overlay -->
            <div class="position-absolute start-0 top-0 w-100 h-100" style="opacity: 0.1; background-image: radial-gradient(circle at 20% 20%, white 0%, transparent 20%), radial-gradient(circle at 80% 80%, white 0%, transparent 20%); pointer-events: none;"></div>
            
            <div class="z-1 text-center">
                <div class="mb-4">
                    <i class="bi bi-mortarboard-fill display-1"></i>
                </div>
                <h2 class="fw-bold mb-3 display-6">Welcome Back!</h2>
                <p class="lead mb-4 opacity-75">Connect with the world of knowledge.</p>
                <div class="d-flex gap-2 justify-content-center">
                    <span class="badge bg-white text-primary bg-opacity-10 px-3 py-2 rounded-pill"><i class="bi bi-check-circle me-1"></i> Fast</span>
                    <span class="badge bg-white text-primary bg-opacity-10 px-3 py-2 rounded-pill"><i class="bi bi-shield-check me-1"></i> Secure</span>
                </div>
            </div>
            
            <div class="mt-auto opacity-50 small">
                &copy; 2026 FUNews Education Platform
            </div>
        </div>

        <!-- Right Column: Login Form -->
        <div class="col-lg-6 p-5 d-flex flex-column justify-content-center">
            
            <div class="text-center mb-5 d-lg-none">
                 <h2 class="fw-bold text-primary"><i class="bi bi-newspaper me-2"></i>FUNews</h2>
            </div>

            <div class="mb-4">
                <h3 class="fw-bold mb-1">Sign In</h3>
                <p class="text-muted">Enter your credentials to access your account.</p>
            </div>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger d-flex align-items-center role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    <div>@ViewBag.Error</div>
                </div>
            }

            <form asp-action="Login" method="post">
                <div class="form-floating mb-3">
                    <input name="email" type="email" class="form-control" id="floatingEmail" placeholder="name@example.com" required />
                    <label for="floatingEmail" class="text-muted"><i class="bi bi-envelope me-1"></i> Email address</label>
                </div>
                
                <div class="form-floating mb-4">
                    <input name="password" type="password" class="form-control" id="floatingPassword" placeholder="Password" required />
                    <label for="floatingPassword" class="text-muted"><i class="bi bi-lock me-1"></i> Password</label>
                </div>

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="rememberMe">
                        <label class="form-check-label text-muted small" for="rememberMe">
                            Remember me
                        </label>
                    </div>
                    <a href="#" class="text-decoration-none text-primary small fw-semibold">Forgot Password?</a>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-lg rounded-pill shadow-sm">
                        Sign In <i class="bi bi-arrow-right ms-2"></i>
                    </button>
                </div>
            </form>

            <div class="position-relative my-4">
                <hr class="text-muted opacity-25">
                <span class="position-absolute top-50 start-50 translate-middle bg-white px-3 text-muted small">or continue with</span>
            </div>

            <div class="d-flex gap-3 justify-content-center mb-4">
                <button class="btn btn-outline-secondary rounded-circle p-2" style="width: 42px; height: 42px;" title="Google">
                    <i class="bi bi-google"></i>
                </button>
                <button class="btn btn-outline-secondary rounded-circle p-2" style="width: 42px; height: 42px;" title="Facebook">
                    <i class="bi bi-facebook"></i>
                </button>
                <button class="btn btn-outline-secondary rounded-circle p-2" style="width: 42px; height: 42px;" title="Microsoft">
                    <i class="bi bi-microsoft"></i>
                </button>
            </div>
            
            <div class="text-center text-muted small">
                Don't have an account? <a href="#" class="text-primary fw-bold text-decoration-none">Sign up</a>
            </div>
        </div>
    </div>
</div>
