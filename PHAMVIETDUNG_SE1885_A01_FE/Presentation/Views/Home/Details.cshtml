@model PHAMVIETDUNG_SE1885_A01_FE.Presentation.ViewModels.NewsArticleViewModel

@{
    ViewData["Title"] = Model.NewsTitle;
    var relatedNews = ViewData["RelatedNews"] as List<PHAMVIETDUNG_SE1885_A01_FE.Presentation.ViewModels.NewsArticleViewModel>;
}

<div class="container py-5 animate__animated animate__fadeIn">
    <div class="row g-5">
        <!-- Main Content -->
        <div class="col-lg-8">
            <article>
                <header class="mb-5">
                    <div class="d-flex align-items-center gap-2 mb-3">
                         <span class="badge bg-primary-subtle text-primary border border-primary-subtle rounded-pill px-3 py-2 fw-medium">
                             @Model.Category?.CategoryName ?? "News"
                         </span>
                         <span class="text-muted small">
                             <i class="bi bi-calendar3 me-1"></i>@Model.CreatedDate?.ToString("MMMM dd, yyyy")
                         </span>
                    </div>
                    
                    <h1 class="fw-bold display-5 mb-3 text-dark lh-sm">@Model.NewsTitle</h1>
                    
                    <p class="lead text-muted fst-italic mb-4 border-start border-4 border-primary ps-3">
                        @Model.Headline
                    </p>

                    <!-- Tags -->
                    <div class="d-flex flex-wrap gap-2 mb-4">
                        @if (Model.NewsTags != null && Model.NewsTags.Any())
                        {
                            foreach (var nt in Model.NewsTags)
                            {
                                <span class="badge bg-light text-secondary border rounded-pill px-3 py-2 fw-normal">
                                    <i class="bi bi-hash text-muted me-1"></i>@nt.Tag?.TagName
                                </span>
                            }
                        }
                    </div>
                </header>
                
                <!-- Feature Image -->
                @{
                    var detailImage = !string.IsNullOrEmpty(Model.NewsImage) 
                        ? (Model.NewsImage.StartsWith("http") ? Model.NewsImage : $"http://localhost:5000{Model.NewsImage}") 
                        : $"https://picsum.photos/seed/{Model.NewsArticleId}/1200/600";
                }
                <figure class="mb-5 shadow-lg rounded-4 overflow-hidden position-relative">
                    <img class="img-fluid w-100 object-fit-cover" src="@detailImage" alt="@Model.NewsTitle" style="max-height: 500px;" />
                     <div class="position-absolute bottom-0 start-0 w-100 p-3 bg-gradient-dark text-white d-none">
                        <small class="opacity-75">Image caption if available</small>
                    </div>
                </figure>                

                <!-- Content -->
                <div class="article-content fs-5 text-dark" style="line-height: 1.8;">
                    @Html.Raw(Model.NewsContent)
                </div>
            </article>
            
            <div class="d-flex justify-content-between align-items-center mt-5 pt-4 border-top">
                <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4 hover-lift">
                    <i class="bi bi-arrow-left me-2"></i>Back to Headlines
                </a>
                 <div class="text-muted small">
                    <i class="bi bi-person-circle me-1"></i>Published by <span class="fw-semibold text-dark">System System</span>
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <div class="position-sticky" style="top: 2rem;">
                 <!-- Related News Widget -->
                <div class="card border-0 shadow-sm rounded-4 mb-4 bg-white overflow-hidden">
                    <div class="card-header bg-white border-bottom py-3 px-4">
                        <h5 class="card-title fw-bold mb-0 text-dark">
                            <i class="bi bi-collection-play me-2 text-primary"></i>Related News
                        </h5>
                    </div>
                    <div class="list-group list-group-flush">
                         @if (relatedNews != null && relatedNews.Any())
                        {
                            @foreach (var item in relatedNews)
                            {
                                <a asp-action="Details" asp-route-id="@item.NewsArticleId" 
                                   class="list-group-item list-group-item-action p-3 border-0 border-bottom hover-bg-light transition-all">
                                    <div class="d-flex w-100 justify-content-between align-items-center mb-1">
                                        <small class="text-primary fw-medium">@item.Category?.CategoryName</small>
                                        <small class="text-muted">@item.CreatedDate?.ToString("MMM dd")</small>
                                    </div>
                                    <h6 class="mb-1 text-dark fw-bold line-clamp-2">@item.NewsTitle</h6>
                                </a>
                            }
                        }
                        else
                        {
                            <div class="p-4 text-center text-muted">
                                <i class="bi bi-journal-x fs-1 opacity-50 mb-2"></i>
                                <p class="mb-0 small">No related news found.</p>
                            </div>
                        }
                    </div>
                </div>

                <!-- Newsletter Widget (Optional Placeholder) -->
                <div class="card border-0 shadow-sm rounded-4 bg-primary text-white overflow-hidden">
                    <div class="card-body p-4 text-center">
                        <i class="bi bi-envelope-paper-heart fs-1 mb-3 opacity-75"></i>
                        <h5 class="fw-bold">Stay Updated</h5>
                        <p class="small opacity-75 mb-3">Subscribe to get the latest news delivered to your inbox.</p>
                        <div class="input-group">
                            <input type="email" class="form-control border-0" placeholder="Your email">
                            <button class="btn btn-dark" type="button">Join</button>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<style>
    .hover-lift { transition: transform 0.2s; }
    .hover-lift:hover { transform: translateY(-3px); }
    .hover-bg-light:hover { background-color: #f8f9fa !important; padding-left: 1.25rem !important; }
    .transition-all { transition: all 0.2s ease-in-out; }
    .line-clamp-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
    .bg-gradient-dark { background: linear-gradient(to top, rgba(0,0,0,0.8), transparent); }
    .article-content p { margin-bottom: 1.5rem; }
    .article-content img { max-width: 100%; height: auto; border-radius: 0.5rem; margin: 1rem 0; }
</style>
