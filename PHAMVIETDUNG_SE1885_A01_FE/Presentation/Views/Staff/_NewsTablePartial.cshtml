@model IEnumerable<PHAMVIETDUNG_SE1885_A01_FE.Presentation.ViewModels.NewsArticleViewModel>

<table class="table table-hover align-middle mb-0">
    <thead class="bg-light text-uppercase small fw-bold text-muted">
        <tr>
            <th class="ps-4 py-3 border-bottom-0">Title</th>
            <th class="py-3 border-bottom-0">Tags</th>
            <th class="py-3 border-bottom-0">Category</th>
            <th class="py-3 border-bottom-0">Status</th>
            <th class="py-3 border-bottom-0">Created</th>
            <th class="text-end pe-4 py-3 border-bottom-0">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model) {
                <tr class="transition-row">
                    <td class="ps-4 py-3">
                        <div class="fw-semibold text-dark mb-1">
                             @(item.NewsTitle?.Length > 40 ? item.NewsTitle.Substring(0, 40) + "..." : item.NewsTitle)
                        </div>
                        <small class="text-muted d-block text-truncate" style="max-width: 250px;">
                            <i class="bi bi-fonts me-1"></i>@item.Headline
                        </small>
                    </td>
                    <td>
                        @if (item.NewsTags != null && item.NewsTags.Any())
                        {
                            <div class="d-flex flex-wrap gap-1">
                                @foreach (var nt in item.NewsTags.Take(2))
                                {
                                    <span class="badge bg-light text-secondary border fw-normal">@nt.Tag?.TagName</span>
                                }
                                @if (item.NewsTags.Count > 2)
                                {
                                    <span class="badge bg-light text-secondary border fw-normal">+@(item.NewsTags.Count - 2)</span>
                                }
                            </div>
                        }
                        else
                        {
                            <span class="text-muted small fst-italic">No tags</span>
                        }
                    </td>
                    <td>
                         <span class="badge bg-primary-subtle text-primary border border-primary-subtle rounded-pill px-3">
                             @item.Category?.CategoryName
                         </span>
                    </td>
                    <td>
                        @if (item.NewsStatus == true)
                        {
                            <span class="badge bg-success-subtle text-success border border-success-subtle rounded-pill px-3">Published</span>
                        }
                        else
                        {
                            <span class="badge bg-warning-subtle text-warning border border-warning-subtle rounded-pill px-3">Draft</span>
                        }
                    </td>
                    <td class="text-muted small">
                        <i class="bi bi-calendar3 me-1"></i>@item.CreatedDate?.ToString("MMM dd, yyyy")
                    </td>
                    <td class="text-end pe-4">
                        <div class="d-flex justify-content-end gap-2">
                            <button type="button" onclick="loadModal('@Url.Action("EditNews", "Staff", new { id = item.NewsArticleId })', 'Edit News Article')" 
                                    class="btn btn-sm btn-white border shadow-sm hover-primary" data-bs-toggle="tooltip" title="Edit Article" data-requires-online="true">
                                <i class="bi bi-pencil-fill text-warning"></i>
                            </button>
                            <a asp-action="DuplicateNews" asp-route-id="@item.NewsArticleId" 
                               class="btn btn-sm btn-white border shadow-sm hover-info" data-bs-toggle="tooltip" title="Duplicate Article" data-requires-online="true">
                                <i class="bi bi-files text-info"></i>
                            </a>
                            <button type="button" 
                                    class="btn btn-sm btn-white border shadow-sm hover-danger" 
                                    data-bs-toggle="modal" 
                                    data-bs-target="#deleteModal" 
                                    data-article-id="@item.NewsArticleId" 
                                    data-article-title="@item.NewsTitle"
                                    title="Delete Article"
                                    data-requires-online="true">
                                <i class="bi bi-trash-fill text-danger"></i>
                            </button>
                        </div>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center py-5">
                    <div class="text-muted opacity-50 mb-2">
                        <i class="bi bi-journal-x display-4"></i>
                    </div>
                    <h6 class="text-muted fw-bold">No articles found</h6>
                    <p class="small text-muted mb-0">Try creating a new article or adjusting filters.</p>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (ViewBag.TotalPages > 1)
{
    <div class="px-4 py-3 border-top bg-light-subtle d-flex justify-content-between align-items-center">
        <span class="small text-muted">Page @ViewBag.CurrentPage of @ViewBag.TotalPages</span>
        <nav aria-label="Page navigation">
            <ul class="pagination pagination-sm mb-0">
                <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link" href="#" onclick="filterNews(@(ViewBag.CurrentPage - 1)); return false;">
                        <i class="bi bi-chevron-left"></i>
                    </a>
                </li>
                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                        <a class="page-link" href="#" onclick="filterNews(@i); return false;">@i</a>
                    </li>
                }
                <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                    <a class="page-link" href="#" onclick="filterNews(@(ViewBag.CurrentPage + 1)); return false;">
                         <i class="bi bi-chevron-right"></i>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
}

<style>
    .btn-white { background-color: white; }
    .hover-primary:hover { border-color: var(--bs-primary) !important; color: var(--bs-primary); }
    .hover-info:hover { border-color: var(--bs-info) !important; background-color: var(--bs-info); }
    .hover-info:hover i { color: white !important; }
    .hover-danger:hover { border-color: var(--bs-danger) !important; background-color: var(--bs-danger); }
    .hover-danger:hover i { color: white !important; }
    .transition-row { transition: background-color 0.2s; }
    .transition-row:hover { background-color: rgba(var(--bs-primary-rgb), 0.02); }
</style>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-header bg-danger-subtle border-0">
                <h5 class="modal-title fw-bold text-danger" id="deleteModalLabel">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>Confirm Deletion
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-4">
                <p class="mb-3">Are you sure you want to delete this article?</p>
                <div class="alert alert-warning border-0 bg-warning-subtle mb-0">
                    <div class="d-flex align-items-start gap-2">
                        <i class="bi bi-info-circle-fill text-warning mt-1"></i>
                        <div class="small">
                            <strong id="articleTitleDisplay"></strong>
                            <p class="mb-0 mt-1 text-muted">This action cannot be undone.</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer border-0 bg-light">
                <button type="button" class="btn btn-light rounded-pill px-4" data-bs-dismiss="modal">
                    <i class="bi bi-x-lg me-2"></i>Cancel
                </button>
                <form id="deleteForm" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger rounded-pill px-4 shadow-sm">
                        <i class="bi bi-trash-fill me-2"></i>Delete Article
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Initialize tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        })
        
        // Handle delete modal
        var deleteModal = document.getElementById('deleteModal');
        if (deleteModal) {
            deleteModal.addEventListener('show.bs.modal', function (event) {
                var button = event.relatedTarget;
                var articleId = button.getAttribute('data-article-id');
                var articleTitle = button.getAttribute('data-article-title');
                
                // Update modal content
                var titleDisplay = deleteModal.querySelector('#articleTitleDisplay');
                titleDisplay.textContent = articleTitle;
                
                // Update form action
                var form = deleteModal.querySelector('#deleteForm');
                form.action = '@Url.Action("DeleteNews", "Staff")' + '?id=' + articleId;
            });
        }
    });
</script>
