@model IEnumerable<PHAMVIETDUNG_SE1885_A01_FE.Presentation.ViewModels.NewsArticleViewModel>

<table class="table table-hover mb-0">
    <thead class="bg-light">
        <tr>
            <th class="ps-4">Title</th>
            <th>Tags</th>
            <th>Category</th>
            <th>Status</th>
            <th>Created</th>
            <th class="text-end pe-4">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model) {
                <tr>
                    <td class="ps-4 fw-medium">
                        <div class="text-dark">@item.NewsTitle</div>
                        <small class="text-muted d-block text-truncate" style="max-width: 200px;">@item.Headline</small>
                    </td>
                    <td>
                        @if (item.NewsTags != null)
                        {
                            foreach (var nt in item.NewsTags.Take(2))
                            {
                                <span class="badge bg-secondary-light text-secondary border me-1">@nt.Tag?.TagName</span>
                            }
                            if (item.NewsTags.Count > 2)
                            {
                                <small class="text-muted">+@(item.NewsTags.Count - 2)</small>
                            }
                        }
                    </td>
                    <td><span class="badge bg-light text-dark border">@item.Category?.CategoryName</span></td>
                    <td>
                        @if (item.NewsStatus == true)
                        {
                            <span class="badge bg-success-subtle text-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-danger-subtle text-danger">Inactive</span>
                        }
                    </td>
                    <td class="text-muted small">@item.CreatedDate?.ToString("MMM dd, yyyy")</td>
                    <td class="text-end pe-4">
                        <div class="btn-group">
                            <button type="button" onclick="loadModal('@Url.Action("EditNews", "Staff", new { id = item.NewsArticleId })', 'Edit News Article')" class="btn btn-sm btn-outline-secondary" title="Edit"><i class="bi bi-pencil"></i></button>
                            <a asp-action="DuplicateNews" asp-route-id="@item.NewsArticleId" class="btn btn-sm btn-outline-primary" title="Copy"><i class="bi bi-files"></i></a>
                            <a asp-action="DeleteNews" asp-route-id="@item.NewsArticleId" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure?');" title="Delete"><i class="bi bi-trash"></i></a>
                        </div>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center py-4 text-muted">
                    <i class="bi bi-inbox fs-4 d-block mb-2"></i>
                    No articles found matching your criteria.
                </td>
            </tr>
        }
    </tbody>
</table>

@if (ViewBag.TotalPages > 1)
{
    <div class="px-4 py-3 border-top">
        <nav aria-label="Page navigation">
            <ul class="pagination mb-0 justify-content-end">
                <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link" href="#" onclick="filterNews(@(ViewBag.CurrentPage - 1)); return false;">Previous</a>
                </li>
                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                        <a class="page-link" href="#" onclick="filterNews(@i); return false;">@i</a>
                    </li>
                }
                <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                    <a class="page-link" href="#" onclick="filterNews(@(ViewBag.CurrentPage + 1)); return false;">Next</a>
                </li>
            </ul>
        </nav>
    </div>
}
