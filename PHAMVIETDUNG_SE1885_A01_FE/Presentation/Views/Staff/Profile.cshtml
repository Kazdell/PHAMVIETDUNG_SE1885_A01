@model PHAMVIETDUNG_SE1885_A01_FE.Presentation.ViewModels.SystemAccountViewModel
@{
    ViewData["Title"] = "My Profile";
}

<div class="container-fluid px-lg-5 py-4">
    <div class="row g-4">
        <!-- Left Column: Profile Card -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm rounded-4 overflow-hidden sticky-top" style="top: 100px;">
                <!-- Profile Header with Image -->
                <div class="position-relative" style="height: 180px; overflow: hidden;">
                    <img src="https://picsum.photos/seed/@(Model.AccountId)/800/400" 
                         alt="Profile Background" 
                         class="w-100 h-100 object-fit-cover">
                </div>
                
                <div class="card-body text-center position-relative" style="margin-top: -50px;">
                    <!-- Avatar -->
                    <div class="d-inline-block position-relative mb-3">
                        <div class="rounded-circle bg-white p-2 shadow-lg d-inline-block">
                            <div class="rounded-circle text-white d-flex align-items-center justify-content-center fw-bold" 
                                 style="width: 100px; height: 100px; font-size: 2.5rem; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                                @(Model.AccountName?.Substring(0, 1).ToUpper() ?? "U")
                            </div>
                        </div>
                    </div>
                    
                    <h4 class="fw-bold mb-1 text-dark">@Model.AccountName</h4>
                    <p class="text-muted small mb-3">@Model.AccountEmail</p>
                    
                    <div class="d-flex justify-content-center gap-2 mb-4">
                        <span class="badge bg-info-subtle text-info border border-info-subtle rounded-pill px-3 py-2">
                            <i class="bi bi-shield-check me-1"></i>Staff Editor
                        </span>
                    </div>
                    
                    <div class="d-grid gap-2">
                        <a asp-action="EditProfile" class="btn btn-primary rounded-pill shadow-sm hover-lift">
                            <i class="bi bi-pencil-square me-2"></i>Edit Profile
                        </a>
                        <a asp-action="Dashboard" class="btn btn-outline-secondary rounded-pill">
                            <i class="bi bi-speedometer2 me-2"></i>Dashboard
                        </a>
                    </div>
                </div>
                
                <div class="card-footer bg-light border-top-0 text-center py-3">
                    <small class="text-muted">
                        <i class="bi bi-clock me-1"></i>Last login: Just now
                    </small>
                </div>
            </div>
        </div>
        
        <!-- Right Column: Details -->
        <div class="col-lg-8">
            <!-- Account Information Card -->
            <div class="card border-0 shadow-sm rounded-4 mb-4 animate__animated animate__fadeInUp">
                <div class="card-header bg-white border-bottom py-3 px-4">
                    <h5 class="card-title fw-bold mb-0">
                        <i class="bi bi-person-circle me-2 text-primary"></i>Account Information
                    </h5>
                </div>
                <div class="card-body p-4">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="d-flex align-items-start gap-3 p-3 bg-light rounded-3 h-100">
                                <div class="flex-shrink-0">
                                    <div class="rounded-circle bg-primary-subtle d-flex align-items-center justify-content-center" 
                                         style="width: 48px; height: 48px;">
                                        <i class="bi bi-envelope-fill text-primary fs-5"></i>
                                    </div>
                                </div>
                                <div class="flex-grow-1">
                                    <label class="small text-muted text-uppercase fw-bold mb-1 d-block">Email Address</label>
                                    <span class="fw-semibold text-dark d-block">@Model.AccountEmail</span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="d-flex align-items-start gap-3 p-3 bg-light rounded-3 h-100">
                                <div class="flex-shrink-0">
                                    <div class="rounded-circle bg-warning-subtle d-flex align-items-center justify-content-center" 
                                         style="width: 48px; height: 48px;">
                                        <i class="bi bi-key-fill text-warning fs-5"></i>
                                    </div>
                                </div>
                                <div class="flex-grow-1">
                                    <label class="small text-muted text-uppercase fw-bold mb-1 d-block">Role</label>
                                    <span class="fw-semibold text-dark d-block">Content Management</span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="d-flex align-items-start gap-3 p-3 bg-light rounded-3 h-100">
                                <div class="flex-shrink-0">
                                    <div class="rounded-circle bg-success-subtle d-flex align-items-center justify-content-center" 
                                         style="width: 48px; height: 48px;">
                                        <i class="bi bi-check-circle-fill text-success fs-5"></i>
                                    </div>
                                </div>
                                <div class="flex-grow-1">
                                    <label class="small text-muted text-uppercase fw-bold mb-1 d-block">Status</label>
                                    <span class="fw-semibold text-success d-block">Active</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Quick Stats Card -->
            <div class="card border-0 shadow-sm rounded-4 animate__animated animate__fadeInUp animate__delay-1s">
                <div class="card-header bg-white border-bottom py-3 px-4">
                    <h5 class="card-title fw-bold mb-0">
                        <i class="bi bi-bar-chart-fill me-2 text-primary"></i>Quick Stats
                    </h5>
                </div>
                <div class="card-body p-4">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <div class="text-center p-3 bg-primary-subtle rounded-3">
                                <div class="fs-2 fw-bold text-primary mb-1">@(ViewBag.TotalArticles ?? 0)</div>
                                <div class="small text-muted">Articles Created</div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="text-center p-3 bg-success-subtle rounded-3">
                                <div class="fs-2 fw-bold text-success mb-1">@(ViewBag.PublishedArticles ?? 0)</div>
                                <div class="small text-muted">Published</div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="text-center p-3 bg-warning-subtle rounded-3">
                                <div class="fs-2 fw-bold text-warning mb-1">@(ViewBag.DraftArticles ?? 0)</div>
                                <div class="small text-muted">Drafts</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-lift { 
        transition: transform 0.2s, box-shadow 0.2s; 
    }
    .hover-lift:hover { 
        transform: translateY(-2px); 
        box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05); 
    }
    .object-fit-cover { 
        object-fit: cover; 
    }
</style>
