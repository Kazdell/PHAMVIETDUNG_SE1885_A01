@model PHAMVIETDUNG_SE1885_A01_FE.Presentation.ViewModels.SystemAccountViewModel

@{
    ViewData["Title"] = "Edit Profile";
}

<h1>Edit Profile</h1>

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white py-3">
                 <h5 class="mb-0 text-primary fw-bold">Update Account Info</h5>
            </div>
            <div class="card-body p-4">
                <form asp-action="EditProfile">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="AccountId" />
                    <div class="form-group mb-3">
                        <label asp-for="AccountName" class="control-label fw-semibold mb-1">Full Name</label>
                        <input asp-for="AccountName" class="form-control" />
                        <span asp-validation-for="AccountName" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                         <label asp-for="AccountEmail" class="control-label fw-semibold mb-1">Email Address</label>
                        <input asp-for="AccountEmail" class="form-control" />
                        <span asp-validation-for="AccountEmail" class="text-danger"></span>
                    </div>
                    
                    <hr class="my-4" />
                    <h6 class="mb-3 text-muted text-uppercase small fw-bold">Change Password</h6>

                    <div class="form-group mb-3">
                        <label asp-for="OldPassword" class="control-label fw-semibold mb-1">Old Password</label>
                        <input asp-for="OldPassword" class="form-control" type="password" />
                        <span asp-validation-for="OldPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                         <label asp-for="NewPassword" class="control-label fw-semibold mb-1">New Password (leave blank to keep current)</label>
                        <input asp-for="NewPassword" class="form-control" type="password" />
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>
                    
                    <div class="d-flex justify-content-end gap-2 mt-4">
                        <a asp-action="Profile" class="btn btn-outline-secondary">Cancel</a>
                        <button type="submit" class="btn btn-primary px-4">Update Profile</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
