@model PHAMVIETDUNG_SE1885_A01_FE.Presentation.ViewModels.NewsArticleViewModel
@using PHAMVIETDUNG_SE1885_A01_FE.Presentation.ViewModels

@{
    var categories = ViewBag.Categories as List<CategoryViewModel>;
    var tags = ViewBag.Tags as List<TagViewModel>;
    var categoryName = categories?.FirstOrDefault(c => c.CategoryId == Model.CategoryId)?.CategoryName ?? "";
}

<div class="modal-dialog modal-xl modal-dialog-centered modal-dialog-scrollable">
    <div class="modal-content">
        <div class="modal-header bg-primary text-white">
            <h5 class="modal-title" id="actionModalLabel">Edit News Article</h5>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body p-4">
            <form asp-action="EditNews" class="modal-form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="NewsArticleId" />
                
                <div class="row">
                    <div class="col-md-8">
                        <div class="form-group mb-3">
                            <label asp-for="NewsTitle" class="control-label fw-semibold mb-1">Title</label>
                            <input asp-for="NewsTitle" class="form-control" />
                            <span asp-validation-for="NewsTitle" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="Headline" class="control-label fw-semibold mb-1">Headline</label>
                            <textarea asp-for="Headline" class="form-control" rows="2"></textarea>
                            <span asp-validation-for="Headline" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group mb-3 position-relative">
                            <label asp-for="CategoryId" class="control-label fw-semibold mb-1">Category</label>
                            <input type="hidden" asp-for="CategoryId" id="CategoryId" />
                            
                            <input type="text" class="form-control" id="CategorySearch" placeholder="Type to search category..." autocomplete="off" value="@categoryName">
                            <div id="CategoryList" class="list-group position-absolute w-100 shadow" style="display:none; z-index: 1000; max-height: 200px; overflow-y: auto;">
                                @if (categories != null)
                                {
                                    @foreach (var cat in categories)
                                    {
                                        <a href="javascript:void(0)" class="list-group-item list-group-item-action category-item" data-id="@cat.CategoryId" data-name="@cat.CategoryName">
                                            @cat.CategoryName
                                        </a>
                                    }
                                }
                            </div>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>
                         
                         <div class="form-group mb-3">
                            <label asp-for="NewsContent" class="control-label fw-semibold mb-1">Content</label>
                            <textarea asp-for="NewsContent" class="form-control" rows="10"></textarea>
                            <span asp-validation-for="NewsContent" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-group mb-3">
                            <label asp-for="NewsStatus" class="control-label fw-semibold mb-1">Status</label>
                            <select asp-for="NewsStatus" class="form-select">
                                <option value="true">Active</option>
                                <option value="false">Inactive</option>
                            </select>
                        </div>

                         <div class="form-group mb-3">
                            <label asp-for="NewsSource" class="control-label fw-semibold mb-1">Source</label>
                            <input asp-for="NewsSource" class="form-control" />
                            <span asp-validation-for="NewsSource" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <label class="control-label fw-semibold mb-0">Tags</label>
                                <button type="button" class="btn btn-sm btn-outline-info" id="btnSuggestTags">
                                    <i class="bi bi-magic"></i> Suggest Tags (AI)
                                </button>
                            </div>
                            <div class="card bg-light border-0 p-3" style="max-height: 300px; overflow-y: auto;">
                                @if (tags != null)
                                {
                                    @foreach (var tag in tags)
                                    {
                                        var isChecked = Model.Tags.Any(t => t.TagId == tag.TagId) ? "checked" : "";
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" name="SelectedTagIds" value="@tag.TagId" id="tag_@tag.TagId" @isChecked>
                                            <label class="form-check-label" for="tag_@tag.TagId">@tag.TagName</label>
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-end gap-2 mt-4">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary px-4">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    (function() {
        var searchInput = document.getElementById("CategorySearch");
        var hiddenInput = document.getElementById("CategoryId");
        var list = document.getElementById("CategoryList");
        var items = list.querySelectorAll(".category-item");

        if(searchInput && list) {
             searchInput.addEventListener("focus", function() {
                list.style.display = "block";
            });

             document.addEventListener("click", function(e) {
                if (!searchInput.contains(e.target) && !list.contains(e.target)) {
                    list.style.display = "none";
                }
            });

             searchInput.addEventListener("input", function() {
                var filter = searchInput.value.toLowerCase();
                var hasVisible = false;
                items.forEach(function(item) {
                     var text = item.getAttribute("data-name").toLowerCase();
                    if (text.includes(filter)) {
                        item.style.display = "";
                        hasVisible = true;
                    } else {
                        item.style.display = "none";
                    }
                });
                list.style.display = hasVisible ? "block" : "none";
            });

            items.forEach(function(item) {
                item.addEventListener("click", function() {
                     var id = this.getAttribute("data-id");
                    var name = this.getAttribute("data-name");
                    
                    hiddenInput.value = id;
                    searchInput.value = name;
                    list.style.display = "none";
                });
            });
        }
        var suggestBtn = document.getElementById("btnSuggestTags");
            if(suggestBtn) {
                suggestBtn.addEventListener("click", function() {
                    var content = document.getElementById("NewsContent")?.value || "";
                    if (!content) {
                        alert("Please enter some content first.");
                        return;
                    }
                    
                    // Show Loading
                    var originalText = suggestBtn.innerHTML;
                    suggestBtn.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> A...';
                    suggestBtn.disabled = true;

                    fetch('/Staff/SuggestTags', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify(content)
                    })
                    .then(response => {
                         if (!response.ok) throw new Error("AI Service failed");
                         return response.json();
                    })
                    .then(tags => {
                        var count = 0;
                        var checkboxes = document.querySelectorAll("input[name='SelectedTagIds']");
                        checkboxes.forEach(cb => {
                            var label = document.querySelector("label[for='" + cb.id + "']");
                            if (label) {
                                var tagName = label.innerText.toLowerCase();
                                // Check if tag name contains any of the suggested keywords
                                var match = tags.some(keyword => tagName.includes(keyword.toLowerCase()));
                                if (match) {
                                    cb.checked = true;
                                    count++;
                                }
                            }
                        });
                        alert("AI suggested " + count + " tags based on your content.");
                    })
                    .catch(err => {
                        console.error(err);
                        alert("Failed to get AI suggestions.");
                    })
                    .finally(() => {
                        suggestBtn.innerHTML = originalText;
                        suggestBtn.disabled = false;
                    });
                });
            }
    })();
</script>
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
