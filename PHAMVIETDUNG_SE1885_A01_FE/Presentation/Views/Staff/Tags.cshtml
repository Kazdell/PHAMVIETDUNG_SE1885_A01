@model IEnumerable<PHAMVIETDUNG_SE1885_A01_FE.Presentation.ViewModels.TagViewModel>

@{
    ViewData["Title"] = "Tag Management";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-1">Tag Management</h1>
        <p class="text-muted mb-0">Manage news tags</p>
    </div>
    <button type="button" onclick="loadModal('@Url.Action("CreateTag", "Staff")', 'Create New Tag')" class="btn btn-primary d-flex align-items-center gap-2 px-4 shadow-sm">
        <i class="bi bi-plus-lg"></i> 
        <span>New Tag</span>
    </button>
</div>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card shadow-sm border-0 mb-4">
    <div class="card-body bg-light rounded-top border-bottom">
        <div class="row g-3">
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-text bg-white border-end-0"><i class="bi bi-search text-muted"></i></span>
                    <input type="text" id="searchKeyword" class="form-control border-start-0 ps-0" placeholder="Search by tag name..." onkeyup="debounceFilter()">
                </div>
            </div>
             <div class="col-md-2">
                <button class="btn btn-outline-secondary w-100" onclick="resetFilters()">Reset</button>
            </div>
        </div>
    </div>
    
    <div id="tagTableContainer" class="card-body p-0">
          <partial name="_TagTablePartial" model="Model" />
    </div>
</div>

<!-- Modal Container (Shared) -->
<div class="modal fade" id="actionModal" tabindex="-1" aria-labelledby="actionModalLabel" aria-hidden="true">
    <div id="modal-placeholder"></div>
</div>

@section Scripts {
    <script>
        let debounceTimer;

        function debounceFilter() {
            clearTimeout(debounceTimer);
            debounceTimer = setTimeout(() => filterTags(), 500);
        }

        function filterTags() {
            const keyword = document.getElementById('searchKeyword').value;
            const url = `@Url.Action("FilterTags", "Staff")?keyword=${encodeURIComponent(keyword)}`;

            $.get(url, function (data) {
                $('#tagTableContainer').html(data);
            }).fail(function () {
                alert('Failed to load data.');
            });
        }

        function resetFilters() {
            document.getElementById('searchKeyword').value = '';
            filterTags();
        }
    </script>
}
