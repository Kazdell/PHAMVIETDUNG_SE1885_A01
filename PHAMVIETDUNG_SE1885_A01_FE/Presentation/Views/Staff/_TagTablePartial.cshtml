@model IEnumerable<PHAMVIETDUNG_SE1885_A01_FE.Presentation.ViewModels.TagViewModel>

<table class="table table-hover mb-0">
    <thead class="bg-light">
        <tr>
            <th class="ps-4">Name</th>
            <th>Note</th>
            <th class="text-end pe-4">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model) {
                <tr>
                    <td class="ps-4 fw-medium text-dark"><i class="bi bi-hash text-muted me-1"></i>@item.TagName</td>
                    <td class="text-muted small">@item.Note</td>
                    <td class="text-end pe-4">
                        <div class="btn-group">
                            <a asp-action="News" asp-route-tagId="@item.TagId" class="btn btn-sm btn-outline-info" title="View Articles"><i class="bi bi-newspaper"></i></a>
                            <button type="button" onclick="loadModal('@Url.Action("EditTag", "Staff", new { id = item.TagId })', 'Edit Tag')" class="btn btn-sm btn-outline-warning" title="Edit"><i class="bi bi-pencil"></i></button>
                            <a asp-action="DeleteTag" asp-route-id="@item.TagId" class="btn btn-sm btn-outline-danger" title="Delete"><i class="bi bi-trash"></i></a>
                        </div>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3" class="text-center py-4 text-muted">
                    <i class="bi bi-inbox fs-4 d-block mb-2"></i>
                    No tags found.
                </td>
            </tr>
        }
    </tbody>
</table>
