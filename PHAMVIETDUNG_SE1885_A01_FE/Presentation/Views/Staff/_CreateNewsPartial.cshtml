@model PHAMVIETDUNG_SE1885_A01_FE.Presentation.ViewModels.NewsArticleViewModel
@using PHAMVIETDUNG_SE1885_A01_FE.Presentation.ViewModels

@{
    var categories = ViewBag.Categories as List<CategoryViewModel>;
    var tags = ViewBag.Tags as List<TagViewModel>;
}

<div class="modal-dialog modal-xl modal-dialog-centered modal-dialog-scrollable">
    <div class="modal-content border-0 shadow-lg rounded-4">
        <div class="modal-header bg-surface border-bottom py-3 px-4">
            <div>
                <h5 class="modal-title fw-bold text-main" id="actionModalLabel">Draft Article</h5>
                <p class="mb-0 small text-muted">Create a new story for your audience</p>
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body p-4 bg-body">
            <form asp-action="CreateNews" class="modal-form" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="row g-4">
                    <!-- Left Column: Content -->
                    <div class="col-lg-8">
                        <div class="card border-0 shadow-sm mb-4">
                            <div class="card-body p-4">
                                <div class="form-floating mb-3">
                                    <input asp-for="NewsTitle" class="form-control" id="floatingTitle" placeholder="Title" />
                                    <label for="floatingTitle">Article Title</label>
                                    <span asp-validation-for="NewsTitle" class="text-danger small"></span>
                                </div>
                                
                                <div class="form-floating mb-3">
                                    <textarea asp-for="Headline" class="form-control" id="floatingHeadline" style="height: 100px" placeholder="Headline"></textarea>
                                    <label for="floatingHeadline">Headline / Summary</label>
                                    <span asp-validation-for="Headline" class="text-danger small"></span>
                                </div>

                                <div class="form-group mb-0">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <label class="form-label fw-bold text-muted small uppercase">Content</label>
                                        <!-- AI Magic Button -->
                                        <button type="button" class="btn btn-sm btn-outline-primary d-flex align-items-center gap-2 border-0 bg-primary-soft" id="btnSuggestTags">
                                            <i class="bi bi-stars"></i> Auto-Tag with AI
                                        </button>
                                    </div>
                                    <textarea asp-for="NewsContent" class="form-control" rows="12" placeholder="Write your story here..."></textarea>
                                    <span asp-validation-for="NewsContent" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Right Column: Settings -->
                    <div class="col-lg-4">
                        <div class="card border-0 shadow-sm mb-3">
                            <div class="card-header bg-white fw-bold border-bottom-0 pt-3">Publishing</div>
                            <div class="card-body">
                                <div class="form-group mb-3 position-relative">
                                    <label class="form-label small text-muted">Category</label>
                                    <input type="hidden" asp-for="CategoryId" id="CategoryId" />
                                    <div class="position-relative">
                                        <input type="text" class="form-control" id="CategorySearch" placeholder="Search category..." autocomplete="off">
                                        <i class="bi bi-search position-absolute top-50 end-0 translate-middle-y me-3 text-muted"></i>
                                    </div>
                                    <!-- Dropdown List -->
                                    <div id="CategoryList" class="list-group position-absolute w-100 shadow-lg border-0 mt-1 rounded-3" style="display:none; z-index: 1050; max-height: 200px; overflow-y: auto;">
                                        @if(categories != null)
                                        {
                                            foreach (var cat in categories)
                                            {
                                                <a href="javascript:void(0)" class="list-group-item list-group-item-action category-item border-0 border-bottom" data-id="@cat.CategoryId" data-name="@cat.CategoryName">
                                                    @cat.CategoryName
                                                </a>
                                            }
                                        }
                                    </div>
                                    <span asp-validation-for="CategoryId" class="text-danger small"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label class="form-label small text-muted">Source</label>
                                    <input asp-for="NewsSource" class="form-control" placeholder="e.g. CNN, BBC" />
                                    <span asp-validation-for="NewsSource" class="text-danger small"></span>
                                </div>
                                
                                <div class="form-group mb-0">
                                    <label class="form-label small text-muted d-block mb-2">Status</label>
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" role="switch" id="newsStatusSwitch" 
                                               name="NewsStatus" value="true" checked>
                                        <input type="hidden" name="NewsStatus" value="false" />
                                        <label class="form-check-label" for="newsStatusSwitch" id="statusLabel">
                                            <span class="badge bg-success-subtle text-success border border-success-subtle">Published</span>
                                        </label>
                                    </div>
                                    <small class="text-muted d-block mt-1">Toggle to save as draft or publish immediately</small>
                                </div>
                            </div>
                        </div>

                        <div class="card border-0 shadow-sm mb-3">
                            <div class="card-header bg-white fw-bold border-bottom-0 pt-3">Featured Image</div>
                            <div class="card-body">
                                <div class="p-3 border-2 border-dashed rounded-3 text-center bg-light mb-2">
                                    <i class="bi bi-image fs-1 text-muted opacity-50"></i>
                                    <div class="mt-2 text-muted small">Upload or Drop Image</div>
                                    <input asp-for="ImageFile" type="file" class="form-control mt-2 form-control-sm" accept="image/*" />
                                </div>
                                <div class="text-center text-muted small mb-2">- OR -</div>
                                <input asp-for="NewsImage" type="url" class="form-control form-control-sm" placeholder="Paste Image URL" />
                            </div>
                        </div>

                        <div class="card border-0 shadow-sm">
                            <div class="card-header bg-white fw-bold border-bottom-0 pt-3">Tags</div>
                            <div class="card-body p-0">
                                <div class="p-3" style="max-height: 250px; overflow-y: auto;">
                                    @if (tags != null)
                                    {
                                        @foreach (var tag in tags)
                                        {
                                            <div class="form-check mb-2">
                                                <input class="form-check-input" type="checkbox" name="SelectedTagIds" value="@tag.TagId" id="tag_@tag.TagId">
                                                <label class="form-check-label small" for="tag_@tag.TagId">@tag.TagName</label>
                                            </div>
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal-footer border-top-0 d-flex justify-content-between px-0 pb-0 mt-3">
                     <span class="text-muted small"><i class="bi bi-info-circle me-1"></i> Auto-saved 1 min ago</span>
                     <div class="d-flex gap-2">
                        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary px-4 shadow-sm">Publish Article</button>
                     </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    (function() {
        var searchInput = document.getElementById("CategorySearch");
        var hiddenInput = document.getElementById("CategoryId");
        var list = document.getElementById("CategoryList");
        var items = list.querySelectorAll(".category-item");

        // Status Toggle Logic
        var statusSwitch = document.getElementById("newsStatusSwitch");
        var statusLabel = document.getElementById("statusLabel");
        
        if (statusSwitch && statusLabel) {
            statusSwitch.addEventListener("change", function() {
                if (this.checked) {
                    statusLabel.innerHTML = '<span class="badge bg-success-subtle text-success border border-success-subtle">Published</span>';
                } else {
                    statusLabel.innerHTML = '<span class="badge bg-secondary-subtle text-secondary border border-secondary-subtle">Draft</span>';
                }
            });
        }

        if(searchInput && list) {
            // ... rest of existing code ...
             searchInput.addEventListener("focus", function() {
                list.style.display = "block";
            });

             document.addEventListener("click", function(e) {
                if (!searchInput.contains(e.target) && !list.contains(e.target)) {
                    list.style.display = "none";
                }
            });

             searchInput.addEventListener("input", function() {
                var filter = searchInput.value.toLowerCase();
                var hasVisible = false;
                items.forEach(function(item) {
                     var text = item.getAttribute("data-name").toLowerCase();
                    if (text.includes(filter)) {
                        item.style.display = "";
                        hasVisible = true;
                    } else {
                        item.style.display = "none";
                    }
                });
                list.style.display = hasVisible ? "block" : "none";
            });

            items.forEach(function(item) {
                item.addEventListener("click", function() {
                     var id = this.getAttribute("data-id");
                    var name = this.getAttribute("data-name");
                    
                    hiddenInput.value = id;
                    searchInput.value = name;
                    list.style.display = "none";
                });
            });
        }
        var suggestBtn = document.getElementById("btnSuggestTags");
            if(suggestBtn) {
                suggestBtn.addEventListener("click", function() {
                    var form = suggestBtn.closest('form');
                    var content = form.querySelector('textarea[name="NewsContent"]')?.value || "";
                    console.log("Sending Content for AI Analysis:", content);
                    
                    if (!content || content.length < 10) {
                        alert("Please enter at least 10 characters of content.");
                        return;
                    }
                    
                    // Show Loading
                    var originalText = suggestBtn.innerHTML;
                    suggestBtn.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> A...';
                    suggestBtn.disabled = true;

                    fetch('/Staff/SuggestTags', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ content: content })
                    })
                    .then(response => {
                         if (!response.ok) throw new Error("AI Service failed");
                         return response.json();
                    })
                    .then(tags => {
                        console.log("AI Tags Received:", tags);
                        var count = 0;
                        var matchedTags = [];
                        var checkboxes = form.querySelectorAll("input[name='SelectedTagIds']");
                        
                        checkboxes.forEach(cb => {
                            // Hyper-robust label finding
                            var labelText = "";
                            var labelElement = cb.labels ? cb.labels[0] : null;
                            if (!labelElement) {
                                labelElement = cb.closest('.form-check')?.querySelector('label');
                            }
                            
                            if (labelElement) {
                                labelText = labelElement.innerText.trim();
                                var tagNameFull = labelText.toLowerCase();
                                var tagWords = tagNameFull.split(/[\s-]+/);
                                
                                // Logging every comparison to find the missing link
                                console.log(`Checking Tag: "${labelText}" against AI suggestions...`);

                                var isMatch = tags.some(keyword => {
                                    var kw = keyword.toLowerCase().trim();
                                    if (kw.length < 3) return false;
                                    
                                    // 1. Full match or contains
                                    if (tagNameFull.includes(kw) || kw.includes(tagNameFull)) return true;
                                    
                                    // 2. Prefix Match (3-4 chars)
                                    return tagWords.some(tWord => {
                                        if (tWord.length < 3) return false;
                                        var matchLen = Math.min(tWord.length, kw.length, 4);
                                        return tWord.substring(0, matchLen) === kw.substring(0, matchLen);
                                    });
                                });

                                if (isMatch) {
                                    if (!cb.checked) {
                                        cb.checked = true;
                                        count++;
                                        matchedTags.push(labelText);
                                        cb.closest('.form-check')?.classList.add('animate__animated', 'animate__flash');
                                        console.log(`✅ MATCHED: "${labelText}" matched with AI keywords.`);
                                    } else {
                                        console.log(`ℹ️ ALREADY CHECKED: "${labelText}" matched but was already selected.`);
                                    }
                                } else {
                                    // Log failure only if verbose needed
                                    // console.log(`❌ NO MATCH for "${labelText}"`);
                                }
                            }
                        });

                        if (count > 0) {
                            alert("AI matched " + count + " tags: " + matchedTags.join(", "));
                        } else {
                            alert("AI processed your content but couldn't find a direct match with your existing tags.");
                        }
                    })
                    .catch(err => {
                        console.error(err);
                        alert("Failed to get AI suggestions. Check console for details.");
                    })
                    .finally(() => {
                        suggestBtn.innerHTML = originalText;
                        suggestBtn.disabled = false;
                    });
                });
            }
        var form = document.querySelector(".modal-form");
        if (form) {
            form.addEventListener("submit", function() {
                var selectedTags = [];
                var checkboxes = form.querySelectorAll("input[name='SelectedTagIds']:checked");
                checkboxes.forEach(cb => {
                    var label = cb.closest('.form-check')?.querySelector('label')?.innerText.trim();
                    if (label) selectedTags.push(label);
                });

                var content = form.querySelector('textarea[name="NewsContent"]')?.value || "";

                if (selectedTags.length > 0 && content.length > 50) {
                    fetch('/Staff/LearnTags', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ content: content, tags: selectedTags })
                    }).catch(err => console.error("AI Learning failed", err));
                }
            });
        }
    })();
</script>
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
