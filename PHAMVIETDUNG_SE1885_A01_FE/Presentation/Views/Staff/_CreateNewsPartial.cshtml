@model PHAMVIETDUNG_SE1885_A01_FE.Presentation.ViewModels.NewsArticleViewModel
@using PHAMVIETDUNG_SE1885_A01_FE.Presentation.ViewModels

@{
    var categories = ViewBag.Categories as List<CategoryViewModel>;
    var tags = ViewBag.Tags as List<TagViewModel>;
}

<div class="modal-dialog modal-xl modal-dialog-centered modal-dialog-scrollable">
    <div class="modal-content">
        <div class="modal-header bg-primary text-white">
            <h5 class="modal-title" id="actionModalLabel">Create News Article</h5>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body p-4">
            <form asp-action="CreateNews" class="modal-form" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="row">
                    <div class="col-md-8">
                        <div class="form-group mb-3">
                            <label asp-for="NewsTitle" class="control-label fw-semibold mb-1">Title</label>
                            <input asp-for="NewsTitle" class="form-control" placeholder="Enter article title" />
                            <span asp-validation-for="NewsTitle" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="Headline" class="control-label fw-semibold mb-1">Headline</label>
                            <textarea asp-for="Headline" class="form-control" rows="2" placeholder="Short summary"></textarea>
                            <span asp-validation-for="Headline" class="text-danger"></span>
                        </div>

                         <div class="form-group mb-3">
                            <label class="control-label fw-semibold mb-1">Feature Image</label>
                            <div class="mb-2">
                                <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" />
                                <span asp-validation-for="ImageFile" class="text-danger"></span>
                            </div>
                            <div>
                                <label class="form-label small text-muted">Or paste image URL:</label>
                                <input asp-for="NewsImage" type="url" class="form-control" placeholder="https://example.com/image.jpg" />
                                <small class="text-muted">If both file and URL are provided, file upload takes priority.</small>
                            </div>
                        </div>
                        
                         <div class="form-group mb-3 position-relative">
                            <label asp-for="CategoryId" class="control-label fw-semibold mb-1">Category</label>
                            <input type="hidden" asp-for="CategoryId" id="CategoryId" />
                            <input type="text" class="form-control" id="CategorySearch" placeholder="Type to search category..." autocomplete="off">
                            <div id="CategoryList" class="list-group position-absolute w-100 shadow" style="display:none; z-index: 1000; max-height: 200px; overflow-y: auto;">
                                @if(categories != null)
                                {
                                    foreach (var cat in categories)
                                    {
                                        <a href="javascript:void(0)" class="list-group-item list-group-item-action category-item" data-id="@cat.CategoryId" data-name="@cat.CategoryName">
                                            @cat.CategoryName
                                        </a>
                                    }
                                }
                            </div>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="NewsContent" class="control-label fw-semibold mb-1">Content</label>
                            <textarea asp-for="NewsContent" class="form-control" rows="10" placeholder="Write your article here..."></textarea>
                            <span asp-validation-for="NewsContent" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-4">
                         <div class="form-group mb-3">
                            <label asp-for="NewsSource" class="control-label fw-semibold mb-1">Source</label>
                            <input asp-for="NewsSource" class="form-control" placeholder="e.g. CNN, BBC" />
                            <span asp-validation-for="NewsSource" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <label class="control-label fw-semibold mb-0">Tags</label>
                                <button type="button" class="btn btn-sm btn-outline-info" id="btnSuggestTags">
                                    <i class="bi bi-magic"></i> Suggest Tags (AI)
                                </button>
                            </div>
                            <div class="card bg-light border-0 p-3" style="max-height: 300px; overflow-y: auto;">
                                @if (tags != null)
                                {
                                    @foreach (var tag in tags)
                                    {
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" name="SelectedTagIds" value="@tag.TagId" id="tag_@tag.TagId">
                                            <label class="form-check-label" for="tag_@tag.TagId">@tag.TagName</label>
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-end gap-2 mt-4">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary px-4">Create Article</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    (function() {
        var searchInput = document.getElementById("CategorySearch");
        var hiddenInput = document.getElementById("CategoryId");
        var list = document.getElementById("CategoryList");
        var items = list.querySelectorAll(".category-item");

        if(searchInput && list) {
             searchInput.addEventListener("focus", function() {
                list.style.display = "block";
            });

             document.addEventListener("click", function(e) {
                if (!searchInput.contains(e.target) && !list.contains(e.target)) {
                    list.style.display = "none";
                }
            });

             searchInput.addEventListener("input", function() {
                var filter = searchInput.value.toLowerCase();
                var hasVisible = false;
                items.forEach(function(item) {
                     var text = item.getAttribute("data-name").toLowerCase();
                    if (text.includes(filter)) {
                        item.style.display = "";
                        hasVisible = true;
                    } else {
                        item.style.display = "none";
                    }
                });
                list.style.display = hasVisible ? "block" : "none";
            });

            items.forEach(function(item) {
                item.addEventListener("click", function() {
                     var id = this.getAttribute("data-id");
                    var name = this.getAttribute("data-name");
                    
                    hiddenInput.value = id;
                    searchInput.value = name;
                    list.style.display = "none";
                });
            });
        }
        var suggestBtn = document.getElementById("btnSuggestTags");
            if(suggestBtn) {
                suggestBtn.addEventListener("click", function() {
                    var form = suggestBtn.closest('form');
                    var content = form.querySelector('textarea[name="NewsContent"]')?.value || "";
                    console.log("Sending Content for AI Analysis:", content);
                    
                    if (!content || content.length < 10) {
                        alert("Please enter at least 10 characters of content.");
                        return;
                    }
                    
                    // Show Loading
                    var originalText = suggestBtn.innerHTML;
                    suggestBtn.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> A...';
                    suggestBtn.disabled = true;

                    fetch('/Staff/SuggestTags', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ content: content })
                    })
                    .then(response => {
                         if (!response.ok) throw new Error("AI Service failed");
                         return response.json();
                    })
                    .then(tags => {
                        console.log("AI Tags Received:", tags);
                        var count = 0;
                        var matchedTags = [];
                        var checkboxes = form.querySelectorAll("input[name='SelectedTagIds']");
                        
                        checkboxes.forEach(cb => {
                            // Hyper-robust label finding
                            var labelText = "";
                            var labelElement = cb.labels ? cb.labels[0] : null;
                            if (!labelElement) {
                                labelElement = cb.closest('.form-check')?.querySelector('label');
                            }
                            
                            if (labelElement) {
                                labelText = labelElement.innerText.trim();
                                var tagNameFull = labelText.toLowerCase();
                                var tagWords = tagNameFull.split(/[\s-]+/);
                                
                                // Logging every comparison to find the missing link
                                console.log(`Checking Tag: "${labelText}" against AI suggestions...`);

                                var isMatch = tags.some(keyword => {
                                    var kw = keyword.toLowerCase().trim();
                                    if (kw.length < 3) return false;
                                    
                                    // 1. Full match or contains
                                    if (tagNameFull.includes(kw) || kw.includes(tagNameFull)) return true;
                                    
                                    // 2. Prefix Match (3-4 chars)
                                    return tagWords.some(tWord => {
                                        if (tWord.length < 3) return false;
                                        var matchLen = Math.min(tWord.length, kw.length, 4);
                                        return tWord.substring(0, matchLen) === kw.substring(0, matchLen);
                                    });
                                });

                                if (isMatch) {
                                    if (!cb.checked) {
                                        cb.checked = true;
                                        count++;
                                        matchedTags.push(labelText);
                                        cb.closest('.form-check')?.classList.add('animate__animated', 'animate__flash');
                                        console.log(`✅ MATCHED: "${labelText}" matched with AI keywords.`);
                                    } else {
                                        console.log(`ℹ️ ALREADY CHECKED: "${labelText}" matched but was already selected.`);
                                    }
                                } else {
                                    // Log failure only if verbose needed
                                    // console.log(`❌ NO MATCH for "${labelText}"`);
                                }
                            }
                        });

                        if (count > 0) {
                            alert("AI matched " + count + " tags: " + matchedTags.join(", "));
                        } else {
                            alert("AI processed your content but couldn't find a direct match with your existing tags.");
                        }
                    })
                    .catch(err => {
                        console.error(err);
                        alert("Failed to get AI suggestions. Check console for details.");
                    })
                    .finally(() => {
                        suggestBtn.innerHTML = originalText;
                        suggestBtn.disabled = false;
                    });
                });
            }
        var form = document.querySelector(".modal-form");
        if (form) {
            form.addEventListener("submit", function() {
                var selectedTags = [];
                var checkboxes = form.querySelectorAll("input[name='SelectedTagIds']:checked");
                checkboxes.forEach(cb => {
                    var label = cb.closest('.form-check')?.querySelector('label')?.innerText.trim();
                    if (label) selectedTags.push(label);
                });

                var content = form.querySelector('textarea[name="NewsContent"]')?.value || "";

                if (selectedTags.length > 0 && content.length > 50) {
                    fetch('/Staff/LearnTags', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ content: content, tags: selectedTags })
                    }).catch(err => console.error("AI Learning failed", err));
                }
            });
        }
    })();
</script>
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
