@model IEnumerable<PHAMVIETDUNG_SE1885_A01_FE.Presentation.ViewModels.CategoryViewModel>

@{
    ViewData["Title"] = "Category Management";
}

<div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4 gap-3 animate__animated animate__fadeInDown">
    <div>
        <h1 class="h3 fw-bold mb-1 text-dark">
            <i class="bi bi-tags-fill text-primary me-2"></i>Category Management
        </h1>
        <p class="text-muted mb-0">Organize news content with hierarchical categories.</p>
    </div>
    <button type="button" onclick="loadModal('@Url.Action("CreateCategory", "Staff")', 'Create New Category')" 
            class="btn btn-primary rounded-pill shadow-sm px-4 fw-medium hover-lift">
        <i class="bi bi-plus-lg me-2"></i>New Category
    </button>
</div>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show rounded-3 shadow-sm border-0 border-start border-4 border-danger" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Filter Bar -->
<div class="card shadow-sm border-0 rounded-4 mb-4 animate__animated animate__fadeInUp bg-white">
    <div class="card-body p-3">
        <div class="row g-3 align-items-center">
            <div class="col-md-8 col-lg-6">
                <div class="position-relative">
                    <i class="bi bi-search position-absolute top-50 start-0 translate-middle-y ms-3 text-muted"></i>
                    <input type="text" id="searchKeyword" class="form-control rounded-pill ps-5 bg-light border-0" 
                           placeholder="Search categories by name..." onkeyup="debounceFilter()">
                </div>
            </div>
             <div class="col-md-2 d-none d-lg-block ms-auto text-end">
                 <button class="btn btn-link text-muted text-decoration-none small" onclick="resetFilters()">
                     <i class="bi bi-arrow-counterclockwise me-1"></i>Reset
                 </button>
            </div>
        </div>
    </div>
</div>

<!-- Table Container -->
<div class="card shadow-lg border-0 rounded-4 overflow-hidden animate__animated animate__fadeInUp animate__delay-1s">
    <div id="categoryTableContainer" class="card-body p-0">
         <partial name="_CategoryTablePartial" model="Model" />
    </div>
</div>

<!-- Modal Container (Shared) -->
<div class="modal fade" id="actionModal" tabindex="-1" aria-labelledby="actionModalLabel" aria-hidden="true">
    <div id="modal-placeholder"></div>
</div>

<style>
    .hover-lift { transition: transform 0.2s, box-shadow 0.2s; }
    .hover-lift:hover { transform: translateY(-2px); box-shadow: 0 5px 15px rgba(0,0,0,0.1); }
</style>

@section Scripts {
    <script>
        let debounceTimer;

        function debounceFilter() {
            clearTimeout(debounceTimer);
            // Add loading opacity
            $('#categoryTableContainer').css('opacity', '0.6');
            debounceTimer = setTimeout(() => filterCategories(1), 500);
        }

        function filterCategories(page) {
            const keyword = document.getElementById('searchKeyword').value;
            const url = `@Url.Action("FilterCategories", "Staff")?page=${page}&keyword=${encodeURIComponent(keyword)}`;

            $.get(url, function (data) {
                $('#categoryTableContainer').html(data).css('opacity', '1');
            }).fail(function () {
                alert('Failed to load data.');
                $('#categoryTableContainer').css('opacity', '1');
            });
        }

        function resetFilters() {
            document.getElementById('searchKeyword').value = '';
            filterCategories(1);
        }
    </script>
}
