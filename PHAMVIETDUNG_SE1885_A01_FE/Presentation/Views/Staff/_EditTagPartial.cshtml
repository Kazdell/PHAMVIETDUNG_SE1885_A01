@model PHAMVIETDUNG_SE1885_A01_FE.Presentation.ViewModels.TagViewModel

<div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
        <div class="modal-header bg-primary text-white">
            <h5 class="modal-title" id="actionModalLabel">Edit Tag</h5>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <form asp-action="EditTag" class="modal-form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                 <input type="hidden" asp-for="TagId" />
                <div class="form-group mb-3">
                    <label asp-for="TagName" class="control-label fw-semibold mb-1">Tag Name</label>
                    <input asp-for="TagName" class="form-control" />
                    <span asp-validation-for="TagName" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Note" class="control-label fw-semibold mb-1">Note</label>
                    <input asp-for="Note" class="form-control" />
                    <span asp-validation-for="Note" class="text-danger"></span>
                </div>
                
                <div class="d-flex justify-content-end gap-2 mt-4">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary px-4">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
