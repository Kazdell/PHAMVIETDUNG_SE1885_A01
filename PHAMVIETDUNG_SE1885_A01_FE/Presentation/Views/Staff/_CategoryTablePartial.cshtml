@model IEnumerable<PHAMVIETDUNG_SE1885_A01_FE.Presentation.ViewModels.CategoryViewModel>

<table class="table table-hover align-middle mb-0">
    <thead class="bg-light text-uppercase small fw-bold text-muted">
        <tr>
            <th class="ps-4 py-3 border-bottom-0">Name</th>
            <th class="py-3 border-bottom-0">Description</th>
            <th class="py-3 border-bottom-0">Articles</th>
            <th class="py-3 border-bottom-0">Status</th>
            <th class="text-end pe-4 py-3 border-bottom-0">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model) {
                <tr class="transition-row">
                    <td class="ps-4 py-3">
                        <span class="fw-semibold text-dark">@item.CategoryName</span>
                    </td>
                    <td class="text-muted small">
                        @(item.CategoryDesciption?.Length > 50 ? item.CategoryDesciption.Substring(0, 50) + "..." : item.CategoryDesciption)
                    </td>
                    <td>
                        <span class="badge bg-light text-dark border border-secondary-subtle rounded-pill px-3">
                            <i class="bi bi-file-text me-1"></i>@item.ArticleCount
                        </span>
                    </td>
                    <td>
                        @if (item.IsActive == true)
                        {
                            <span class="badge bg-success-subtle text-success border border-success-subtle rounded-pill px-3">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary-subtle text-secondary border border-secondary-subtle rounded-pill px-3">Inactive</span>
                        }
                    </td>
                    <td class="text-end pe-4">
                        <div class="d-flex justify-content-end gap-2">
                             <button type="button" onclick="loadModal('@Url.Action("EditCategory", "Staff", new { id = item.CategoryId })', 'Edit Category')" 
                                     class="btn btn-sm btn-white border shadow-sm hover-primary" data-bs-toggle="tooltip" title="Edit Category">
                                <i class="bi bi-pencil-fill text-warning"></i>
                            </button>
                            <a asp-action="DeleteCategory" asp-route-id="@item.CategoryId" 
                               class="btn btn-sm btn-white border shadow-sm hover-danger" data-bs-toggle="tooltip" title="Delete Category"
                               onclick="return confirm('Are you sure you want to delete this category?');">
                                <i class="bi bi-trash-fill text-danger"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        }
        else
        {
             <tr>
                <td colspan="5" class="text-center py-5">
                    <div class="text-muted opacity-50 mb-2">
                        <i class="bi bi-inbox display-4"></i>
                    </div>
                    <h6 class="text-muted fw-bold">No categories found</h6>
                    <p class="small text-muted mb-0">Try adjusting your search criteria.</p>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (ViewBag.TotalPages > 1)
{
    <div class="px-4 py-3 border-top bg-light-subtle d-flex justify-content-between align-items-center">
        <span class="small text-muted">Page @ViewBag.CurrentPage of @ViewBag.TotalPages</span>
        <nav aria-label="Page navigation">
            <ul class="pagination pagination-sm mb-0">
                <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link border-0 bg-transparent" href="#" onclick="filterCategories(@(ViewBag.CurrentPage - 1)); return false;">
                        <i class="bi bi-chevron-left"></i>
                    </a>
                </li>
                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                         <a class="page-link border-0 rounded-circle mx-1 @(i == ViewBag.CurrentPage ? "shadow-sm" : "bg-transparent")" 
                           href="#" onclick="filterCategories(@i); return false;">@i</a>
                    </li>
                }
                <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                    <a class="page-link border-0 bg-transparent" href="#" onclick="filterCategories(@(ViewBag.CurrentPage + 1)); return false;">
                        <i class="bi bi-chevron-right"></i>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
}

<style>
    .btn-white { background-color: white; }
    .hover-primary:hover { border-color: var(--bs-primary) !important; color: var(--bs-primary); }
    .hover-danger:hover { border-color: var(--bs-danger) !important; background-color: var(--bs-danger); }
    .hover-danger:hover i { color: white !important; }
    .transition-row { transition: background-color 0.2s; }
    .transition-row:hover { background-color: rgba(var(--bs-primary-rgb), 0.02); }
</style>

<script>
    var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
    var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
        return new bootstrap.Tooltip(tooltipTriggerEl)
    })
</script>
