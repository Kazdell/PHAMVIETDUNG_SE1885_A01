@model IEnumerable<PHAMVIETDUNG_SE1885_A01_FE.Presentation.ViewModels.CategoryViewModel>

<table class="table table-hover mb-0">
    <thead class="bg-light">
        <tr>
            <th class="ps-4">Name</th>
            <th>Description</th>
            <th>Articles</th>
            <th>Status</th>
            <th class="text-end pe-4">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model) {
                <tr>
                    <td class="ps-4 fw-medium text-dark">@item.CategoryName</td>
                    <td class="text-muted small">@item.CategoryDesciption</td>
                    <td><span class="badge bg-info-subtle text-info-emphasis rounded-pill">@item.ArticleCount Articles</span></td>
                    <td>
                        @if (item.IsActive == true)
                        {
                            <span class="badge bg-success-subtle text-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary-subtle text-secondary">Inactive</span>
                        }
                    </td>
                    <td class="text-end pe-4">
                        <div class="btn-group">
                             <button type="button" onclick="loadModal('@Url.Action("EditCategory", "Staff", new { id = item.CategoryId })', 'Edit Category')" class="btn btn-sm btn-outline-warning" title="Edit"><i class="bi bi-pencil"></i></button>
                            <a asp-action="DeleteCategory" asp-route-id="@item.CategoryId" class="btn btn-sm btn-outline-danger" title="Delete"><i class="bi bi-trash"></i></a>
                        </div>
                    </td>
                </tr>
            }
        }
        else
        {
             <tr>
                <td colspan="5" class="text-center py-4 text-muted">
                    <i class="bi bi-inbox fs-4 d-block mb-2"></i>
                    No categories found.
                </td>
            </tr>
        }
    </tbody>
</table>

@if (ViewBag.TotalPages > 1)
{
    <div class="px-4 py-3 border-top">
        <nav aria-label="Page navigation">
            <ul class="pagination mb-0 justify-content-center">
                <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link border-0" href="#" onclick="filterCategories(@(ViewBag.CurrentPage - 1)); return false;">Previous</a>
                </li>
                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                        <a class="page-link border-0 rounded-circle mx-1" href="#" onclick="filterCategories(@i); return false;">@i</a>
                    </li>
                }
                <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                    <a class="page-link border-0" href="#" onclick="filterCategories(@(ViewBag.CurrentPage + 1)); return false;">Next</a>
                </li>
            </ul>
        </nav>
    </div>
}
