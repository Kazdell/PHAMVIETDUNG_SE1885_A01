@model IEnumerable<PHAMVIETDUNG_SE1885_A01_FE.Presentation.ViewModels.CategoryViewModel>

<table class="table table-hover mb-0">
    <thead class="bg-light">
        <tr>
            <th class="ps-4">Name</th>
            <th>Description</th>
            <th>Articles</th>
            <th>Status</th>
            <th class="text-end pe-4">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model) {
                <tr>
                    <td class="ps-4 fw-medium text-dark">@item.CategoryName</td>
                    <td class="text-muted small">@item.CategoryDesciption</td>
                    <td><span class="badge bg-info-subtle text-info-emphasis rounded-pill">@item.ArticleCount Articles</span></td>
                    <td>
                        @if (item.IsActive == true)
                        {
                            <span class="badge bg-success-subtle text-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary-subtle text-secondary">Inactive</span>
                        }
                    </td>
                    <td class="text-end pe-4">
                        <div class="btn-group">
                             <button type="button" onclick="loadModal('@Url.Action("EditCategory", "Staff", new { id = item.CategoryId })', 'Edit Category')" class="btn btn-sm btn-outline-warning" title="Edit"><i class="bi bi-pencil"></i></button>
                            <a asp-action="DeleteCategory" asp-route-id="@item.CategoryId" class="btn btn-sm btn-outline-danger" title="Delete"><i class="bi bi-trash"></i></a>
                        </div>
                    </td>
                </tr>
            }
        }
        else
        {
             <tr>
                <td colspan="5" class="text-center py-4 text-muted">
                    <i class="bi bi-inbox fs-4 d-block mb-2"></i>
                    No categories found.
                </td>
            </tr>
        }
    </tbody>
</table>

@if (ViewBag.TotalPages > 1)
{
    <div class="px-4 py-3 border-top d-flex align-items-center justify-content-between bg-white rounded-bottom">
        <div class="text-muted small">
            Page <span class="fw-semibold text-dark">@ViewBag.CurrentPage</span> of <span class="fw-semibold text-dark">@ViewBag.TotalPages</span>
        </div>
        <nav aria-label="Page navigation">
            <ul class="pagination pagination-sm mb-0 gap-1">
                <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link border-0 rounded px-3" href="#" onclick="filterCategories(@(ViewBag.CurrentPage - 1)); return false;">
                        <i class="bi bi-chevron-left me-1 small"></i> Previous
                    </a>
                </li>
                
                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                        <a class="page-link border-0 rounded mx-1 px-3 d-flex align-items-center justify-content-center" 
                           href="#" onclick="filterCategories(@i); return false;"
                           style="min-width: 32px; height: 32px;">@i</a>
                    </li>
                }

                <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                    <a class="page-link border-0 rounded px-3" href="#" onclick="filterCategories(@(ViewBag.CurrentPage + 1)); return false;">
                        Next <i class="bi bi-chevron-right ms-1 small"></i>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
}

<style>
    .pagination .page-link {
        color: #4b5563;
        background-color: #f9fafb;
        transition: all 0.2s;
    }
    .pagination .page-link:hover {
        background-color: #f3f4f6;
        color: #2563eb;
    }
    .pagination .page-item.active .page-link {
        background-color: #2563eb !important;
        color: white !important;
        box-shadow: 0 2px 4px rgba(37, 99, 235, 0.2);
    }
    .pagination .page-item.disabled .page-link {
        background-color: transparent;
        color: #d1d5db;
        cursor: not-allowed;
    }
</style>
