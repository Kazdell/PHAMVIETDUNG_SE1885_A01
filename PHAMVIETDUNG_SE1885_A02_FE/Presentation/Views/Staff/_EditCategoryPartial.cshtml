@model PHAMVIETDUNG_SE1885_A02_FE.Presentation.ViewModels.CategoryViewModel

<div class="modal-dialog modal-dialog-centered">
    <div class="modal-content border-0 shadow-lg rounded-4 overflow-hidden">
        <div class="modal-header bg-primary text-white border-0 px-4 py-3">
            <h5 class="modal-title fw-bold" id="actionModalLabel">
                <i class="bi bi-tag-fill me-2 opacity-75"></i>Edit Category
            </h5>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body p-4">
            <form asp-action="EditCategory" asp-route-id="@Model.CategoryId" class="modal-form needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3 shadow-sm mb-3"></div>
                <input type="hidden" asp-for="CategoryId" />
                
                <h6 class="text-uppercase text-muted small fw-bold mb-3 ls-1">Category Details</h6>

                <div class="form-floating mb-3">
                    <input asp-for="CategoryName" class="form-control bg-light border-0 fw-medium" placeholder="Category Name" required />
                    <label asp-for="CategoryName" class="text-muted">Category Name</label>
                    <span asp-validation-for="CategoryName" class="text-danger small"></span>
                </div>

                <div class="form-floating mb-3">
                    <textarea asp-for="CategoryDesciption" class="form-control bg-light border-0" placeholder="Description" style="height: 100px"></textarea>
                    <label asp-for="CategoryDesciption" class="text-muted">Description</label>
                    <span asp-validation-for="CategoryDesciption" class="text-danger small"></span>
                </div>

                 <div class="form-floating mb-3">
                     <select asp-for="ParentCategoryId" class="form-select bg-light border-0" asp-items="@(new SelectList(ViewBag.ParentCategories, "CategoryId", "CategoryName"))">
                         <option value="">-- No Parent (Top Level) --</option>
                     </select>
                     <label asp-for="ParentCategoryId" class="text-muted">Parent Category</label>
                </div>
                
                <div class="form-check form-switch mb-3">
                     <input class="form-check-input" type="checkbox" asp-for="IsActive" id="isActiveSwitch" />
                     <label class="form-check-label fw-medium" for="isActiveSwitch">
                        Active Status
                     </label>
                </div>

                <div class="d-flex justify-content-end gap-2 pt-2 border-top">
                    <button type="button" class="btn btn-light rounded-pill px-4 fw-medium" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary" data-requires-online="true">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>
@{await Html.RenderPartialAsync("~/Presentation/Views/Shared/_ValidationScriptsPartial.cshtml");}
