@model PHAMVIETDUNG_SE1885_A02_FE.Presentation.ViewModels.TagViewModel

<div class="modal-dialog modal-dialog-centered">
    <div class="modal-content border-0 shadow-lg rounded-4 overflow-hidden">
        <div class="modal-header bg-primary text-white border-0 px-4 py-3">
            <h5 class="modal-title fw-bold" id="actionModalLabel">
                <i class="bi bi-hash me-2 opacity-75"></i>Create Tag
            </h5>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body p-4">
            <form asp-action="CreateTag" class="modal-form needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3 shadow-sm mb-3"></div>
                
                <h6 class="text-uppercase text-muted small fw-bold mb-3 ls-1">Tag Details</h6>

                <div class="form-floating mb-3">
                    <input asp-for="TagName" class="form-control bg-light border-0 fw-medium" placeholder="Tag Name" required />
                    <label asp-for="TagName" class="text-muted">Tag Name</label>
                    <span asp-validation-for="TagName" class="text-danger small"></span>
                </div>

                <div class="form-floating mb-3">
                    <textarea asp-for="Note" class="form-control bg-light border-0" placeholder="Note" style="height: 100px"></textarea>
                    <label asp-for="Note" class="text-muted">Note</label>
                    <span asp-validation-for="Note" class="text-danger small"></span>
                </div>
                
                <div class="d-flex justify-content-end gap-2 pt-2 border-top">
                    <button type="button" class="btn btn-light rounded-pill px-4 fw-medium" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary" data-requires-online="true">Create Tag</button>
                </div>
            </form>
        </div>
    </div>
</div>
@{await Html.RenderPartialAsync("~/Presentation/Views/Shared/_ValidationScriptsPartial.cshtml");}
