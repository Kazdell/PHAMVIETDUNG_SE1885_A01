@{
    ViewData["Title"] = "Login";
}

@using Microsoft.AspNetCore.Http
@{
    ViewData["Title"] = "Sign In";
}

<div class="d-flex min-vh-100 align-items-center justify-content-center bg-body py-5">
    <div class="row w-100 shadow-lg rounded-4 overflow-hidden bg-surface" style="max-width: 1000px; min-height: 600px; border: 1px solid var(--border-color);">
        
        <!-- Left Column: Branding / Artwork (White Clean Style) -->
        <div class="col-lg-6 d-none d-lg-flex flex-column align-items-center justify-content-center position-relative p-5 bg-login-pattern text-center border-end">
            
            <div class="z-1">
                <div class="mb-4 text-primary bg-white shadow-sm p-3 rounded-circle d-inline-block border">
                    <i class="bi bi-newspaper display-4"></i>
                </div>
                <h2 class="fw-bold mb-3 display-6 text-main">FUNews Management</h2>
                <p class="lead mb-4 text-muted">The intelligent platform for modern journalism.</p>
                
                <div class="d-flex flex-column gap-3 align-items-start text-start mx-auto" style="max-width: 300px;">
                    <div class="d-flex align-items-center gap-3 p-3 bg-white rounded-3 shadow-sm border w-100">
                        <div class="text-primary"><i class="bi bi-robot fs-4"></i></div>
                        <div>
                            <div class="fw-bold small">AI-Powered</div>
                            <div class="text-muted small">Smart tagging & suggestions</div>
                        </div>
                    </div>
                    <div class="d-flex align-items-center gap-3 p-3 bg-white rounded-3 shadow-sm border w-100">
                        <div class="text-success"><i class="bi bi-graph-up-arrow fs-4"></i></div>
                        <div>
                            <div class="fw-bold small">Real-time Analytics</div>
                            <div class="text-muted small">Live dashboard & reports</div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="mt-auto opacity-75 small text-muted">
                &copy; 2026 FUNews Platform.
            </div>
        </div>

        <!-- Right Column: Login Form -->
        <div class="col-lg-6 p-5 d-flex flex-column justify-content-center bg-surface">
            
            <div class="text-center mb-5 d-lg-none">
                 <h2 class="fw-bold text-primary"><i class="bi bi-newspaper me-2"></i>FUNews</h2>
            </div>

            <div class="mb-4">
                <h3 class="fw-bold mb-1 text-main">Welcome back</h3>
                <p class="text-muted">Please enter your details to sign in.</p>
            </div>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger bg-danger-soft border-0 d-flex align-items-center role="alert">
                    <i class="bi bi-exclamation-circle me-2"></i>
                    <div>@ViewBag.Error</div>
                </div>
            }

            <form asp-action="Login" method="post">
                <div class="form-floating mb-3">
                    <input name="email" type="email" class="form-control" id="floatingEmail" placeholder="name@example.com" required />
                    <label for="floatingEmail">Email address</label>
                </div>
                
                <div class="form-floating mb-4">
                    <input name="password" type="password" class="form-control" id="floatingPassword" placeholder="Password" required />
                    <label for="floatingPassword">Password</label>
                </div>

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="rememberMe">
                        <label class="form-check-label text-muted small" for="rememberMe">
                            Remember for 30 days
                        </label>
                    </div>
                    <a href="#" class="text-decoration-none text-primary small fw-semibold">Forgot Password?</a>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-lg rounded-pill shadow-sm py-3">
                        Sign In <i class="bi bi-arrow-right ms-2 opacity-75"></i>
                    </button>
                </div>
            </form>

            <div class="position-relative my-4">
                <hr class="text-muted opacity-25">
                <span class="position-absolute top-50 start-50 translate-middle bg-surface px-3 text-muted small">or continue with</span>
            </div>

            <div class="d-grid grid-cols-3 gap-3 d-flex justify-content-center mb-4">
                <button class="btn btn-outline-secondary rounded-circle p-2 d-flex align-items-center justify-content-center" style="width: 46px; height: 46px;" title="Google">
                    <i class="bi bi-google"></i>
                </button>
                <button class="btn btn-outline-secondary rounded-circle p-2 d-flex align-items-center justify-content-center" style="width: 46px; height: 46px;" title="Facebook">
                    <i class="bi bi-facebook"></i>
                </button>
                <button class="btn btn-outline-secondary rounded-circle p-2 d-flex align-items-center justify-content-center" style="width: 46px; height: 46px;" title="Microsoft">
                    <i class="bi bi-microsoft"></i>
                </button>
            </div>
            
            <div class="text-center text-muted small">
                Don't have an account? <a href="#" class="text-primary fw-bold text-decoration-none">Sign up for free</a>
            </div>
        </div>
    </div>
</div>
