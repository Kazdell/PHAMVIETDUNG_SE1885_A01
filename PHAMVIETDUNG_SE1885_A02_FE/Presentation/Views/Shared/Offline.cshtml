@{
    ViewData["Title"] = "Offline Mode";
}

<div class="row align-items-center justify-content-center" style="min-height: 50vh;">
    <div class="col-12 col-md-8 col-lg-6 text-center">
        <div class="card border-0 shadow-sm p-5 rounded-4 bg-surface">
            <h1 class="display-3 text-warning mb-3"><i class="bi bi-wifi-off"></i></h1>
            <h2 class="fw-bold fs-3 text-dark">You are Offline</h2>
            <p class="text-muted mt-3 mb-4">
                The application cannot reach the server. Some cached content may be available, but live features and data modification are disabled. We are actively trying to reconnect.
            </p>
            <div class="d-flex justify-content-center gap-3 mt-2">
                <a href="/" class="btn btn-outline-primary px-4 rounded-pill">
                    <i class="bi bi-house-door me-2"></i> Go to Homepage
                </a>
                <button onclick="window.location.reload();" class="btn btn-primary px-4 rounded-pill shadow-sm">
                    <i class="bi bi-arrow-clockwise me-2"></i> Retry Connection
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Ensure the global offline event is triggered so the cache can be parsed
        // Add a slight delay to ensure offline.js has initialized
        setTimeout(function () {
            if (window.OfflineManager) {
                window.OfflineManager.triggerOffline();
                
                // Force banner display just in case
                const banner = document.getElementById('offline-banner');
                if (banner) {
                    banner.classList.remove('d-none');
                    banner.classList.add('d-flex');
                    document.getElementById('offline-text').innerHTML = '<strong>Offline Mode</strong> - Backend server is unreachable.';
                }
            }
        }, 300);

        // Auto-reconnect worker: Poll BE every 5 seconds and reload page if successful
        setInterval(function() {
            fetch('/Home/Ping', { method: 'GET', cache: 'no-cache' })
                .then(response => {
                    if (response.ok) {
                        console.log("Backend connection restored! Reloading session...");
                        window.location.reload();
                    }
                })
                .catch(() => {
                    // Still offline, do nothing
                });
        }, 5000);
    </script>
}
