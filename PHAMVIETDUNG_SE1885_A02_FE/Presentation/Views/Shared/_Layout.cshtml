<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FUNews</title>
    
    <!-- Preconnect for Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

    <!-- Bootstrap 5 CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg fixed-top bg-surface border-bottom">
            <div class="container-fluid px-lg-5">
                <a class="navbar-brand d-flex align-items-center gap-2 text-primary fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 32px; height: 32px;">
                        <i class="bi bi-newspaper small"></i>
                    </div>
                    <span>FUNews</span>
                </a>
                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-between" id="navbarSupportedContent">
                    <ul class="navbar-nav mx-auto mb-2 mb-lg-0 gap-1">
                        <li class="nav-item">
                            <a class="nav-link px-3" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link px-3" asp-area="" asp-controller="Search" asp-action="Index">Explore</a>
                        </li>
                        
                        @if (Context.Session.GetString("AccountRole") == "1") // Staff
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle px-3" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Workspace
                                </a>
                                <ul class="dropdown-menu shadow-sm border-0 mt-2 rounded-3 overflow-hidden">
                                     <li><a class="dropdown-item py-2" asp-controller="Staff" asp-action="Dashboard"><i class="bi bi-speedometer2 me-2 text-primary"></i>Dashboard</a></li>
                                     <li><hr class="dropdown-divider"></li>
                                     <li><a class="dropdown-item py-2" asp-controller="Staff" asp-action="News"><i class="bi bi-file-earmark-text me-2"></i>Articles</a></li>
                                     <li><a class="dropdown-item py-2" asp-controller="Staff" asp-action="Categories"><i class="bi bi-folder me-2"></i>Categories</a></li>
                                     <li><a class="dropdown-item py-2" asp-controller="Staff" asp-action="Tags"><i class="bi bi-tags me-2"></i>Tags</a></li>
                                     <li><a class="dropdown-item py-2" asp-controller="Staff" asp-action="History"><i class="bi bi-clock-history me-2"></i>My History</a></li>
                                </ul>
                            </li>
                        }
                        
                         @if (Context.Session.GetString("AccountRole") == "0") // Admin
                        {
                            <li class="nav-item">
                                <a class="nav-link px-3" asp-controller="Admin" asp-action="Accounts">Accounts</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link px-3" asp-controller="Admin" asp-action="Report">Reports</a>
                            </li>
                             <li class="nav-item">
                                <a class="nav-link px-3" asp-controller="Admin" asp-action="AuditLog">Audit Log</a>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav">
                         @if (Context.Session.GetString("AccountId") != null)
                        {
                            <input type="hidden" id="currentAccountId" value="@Context.Session.GetString("AccountId")" />
                            
                            <!-- Notifications -->
                            <li class="nav-item dropdown me-3">
                                <a class="nav-link position-relative hide-caret d-flex align-items-center justify-content-center rounded-circle bg-light" 
                                   style="width: 40px; height: 40px;"
                                   href="#" id="notificationDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-bell"></i>
                                    <span id="notificationBadge" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" style="display: none;">
                                        0
                                        <span class="visually-hidden">New alerts</span>
                                    </span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end shadow-lg border-0 mt-3 p-0 rounded-4 overflow-hidden" aria-labelledby="notificationDropdown" style="width: 360px;">
                                    <div class="d-flex justify-content-between align-items-center p-3 bg-surface border-bottom">
                                        <h6 class="mb-0 fw-bold">Notifications</h6>
                                        <a href="#" class="text-decoration-none small text-primary">Mark all read</a>
                                    </div>
                                    <div id="notificationList" style="max-height: 350px; overflow-y: auto;">
                                        <div class="p-4 text-center text-muted small" id="no-notifications">
                                            <i class="bi bi-bell-slash fs-4 d-block mb-2 opacity-50"></i>
                                            No new notifications
                                        </div>
                                    </div>
                                </ul>
                            </li>

                            <!-- User Profile -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center gap-2" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <div class="bg-primary-soft text-primary rounded-circle d-flex align-items-center justify-content-center fw-bold" style="width: 38px; height: 38px;">
                                        @(Context.Session.GetString("AccountName")?.Substring(0, 1).ToUpper() ?? "U")
                                    </div>
                                    <div class="d-none d-lg-block text-start lh-sm">
                                        <div class="fw-semibold small">@Context.Session.GetString("AccountName")</div>
                                        <div class="text-muted mt-1" style="font-size: 0.75rem;">@(Context.Session.GetString("AccountRole") == "0" ? "Administrator" : "Staff Editor")</div>
                                    </div>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end shadow-md border-0 mt-2 rounded-3" aria-labelledby="userDropdown">
                                    @if(Context.Session.GetString("AccountRole") == "1") {
                                         <li><a class="dropdown-item py-2" asp-controller="Staff" asp-action="Profile"><i class="bi bi-person me-2 text-muted"></i>Profile</a></li>
                                    }
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item py-2 text-danger" asp-controller="Account" asp-action="Logout"><i class="bi bi-box-arrow-right me-2"></i>Sign Out</a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-primary btn-sm px-4 rounded-pill shadow-sm" asp-controller="Account" asp-action="Login">Sign In</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Global API Loading Overlay -->
    <div id="global-loading-overlay" class="d-none position-fixed top-0 start-0 w-100 h-100 d-flex flex-column justify-content-center align-items-center" style="background: rgba(255, 255, 255, 0.8); z-index: 1055; backdrop-filter: blur(2px);">
        <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <div class="mt-2 text-primary fw-medium small">Processing...</div>
    </div>

    <!-- Offline Mode Banner (Floating Glass) -->
    <div id="offline-banner" class="fixed-top d-none justify-content-center" style="top: 80px; z-index: 1040; pointer-events: none;">
        <div class="alert alert-warning border-0 shadow-lg rounded-pill px-4 py-2 d-flex align-items-center gap-2" style="background: rgba(255, 252, 240, 0.95); backdrop-filter: blur(10px); pointer-events: auto;">
             <div class="spinner-grow spinner-grow-sm text-warning" role="status"></div>
             <span class="fw-medium small" id="offline-text">Offline Mode • Retrying connection...</span>
        </div>
    </div>

    <div class="container-fluid px-lg-5" style="padding-top: 100px;">
        <main role="main" class="pb-5">
            @RenderBody()
        </main>
    </div>

    <footer class="footer mt-auto py-4 border-top bg-surface text-center text-muted">
        <div class="container">
            <div class="mb-3">
                <i class="bi bi-newspaper fs-3 text-primary opacity-50"></i>
            </div>
            <p class="mb-0 small">&copy; 2026 <strong>FUNews Management System</strong>. Designed for PRN232.</p>
        </div>
    </footer>


    <div aria-live="polite" aria-atomic="true" class="position-relative">
        <div id="toast-container" class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 9999"></div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/modal.js" asp-append-version="true"></script>
    <script src="~/js/notification.js" asp-append-version="true"></script>
    <script src="~/js/offline.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
