@model IEnumerable<PHAMVIETDUNG_SE1885_A02_FE.Presentation.ViewModels.NewsArticleViewModel>

<div class="row">
    @if (Model != null && Model.Any())
    {
        <div class="col-12 mb-3">
            <span class="text-muted">Found @Model.Count() results</span>
        </div>
        @foreach (var item in Model)
        {
            <div class="col-12 mb-3">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                             <span class="badge bg-primary-subtle text-primary">@item.Category?.CategoryName</span>
                             <span class="text-muted small">@item.CreatedDate?.ToString("MMM dd, yyyy")</span>
                        </div>
                        <h5 class="card-title"><a asp-controller="Home" asp-action="Details" asp-route-id="@item.NewsArticleId" class="text-decoration-none text-dark stretched-link">@item.NewsTitle</a></h5>
                        <h6 class="card-subtitle mb-2 text-muted">@item.Headline</h6>
                        <div class="mb-2">
                            @if (item.NewsTags != null)
                            {
                                foreach (var nt in item.NewsTags)
                                {
                                    <span class="badge bg-light text-secondary border me-1">#@nt.Tag?.TagName</span>
                                }
                            }
                        </div>
                        <div class="d-flex align-items-center">
                            <small class="text-muted">By @(item.CreatedBy?.AccountName ?? "Unknown")</small>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12 text-center py-5">
            <i class="bi bi-search display-1 text-muted opacity-25"></i>
            <p class="mt-3 text-muted">No results found matching your criteria.</p>
        </div>
    }
</div>
