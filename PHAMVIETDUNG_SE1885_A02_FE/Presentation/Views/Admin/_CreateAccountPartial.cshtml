@model PHAMVIETDUNG_SE1885_A02_FE.Presentation.ViewModels.SystemAccountViewModel

<div class="modal-dialog modal-dialog-centered">
    <div class="modal-content border-0 shadow-lg rounded-4 overflow-hidden">
        <div class="modal-header bg-primary text-white border-0 px-4 py-3">
            <h5 class="modal-title fw-bold" id="actionModalLabel">
                <i class="bi bi-person-plus-fill me-2 opacity-75"></i>Create Account
            </h5>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body p-4">
            <form asp-action="Create" class="modal-form needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3 shadow-sm mb-3"></div>
                
                <h6 class="text-uppercase text-muted small fw-bold mb-3 ls-1">Account Details</h6>
                
                <div class="form-floating mb-3">
                    <input asp-for="AccountName" class="form-control bg-light border-0 fw-medium" placeholder="Full Name" required />
                    <label asp-for="AccountName" class="text-muted">Full Name</label>
                    <span asp-validation-for="AccountName" class="text-danger small"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="AccountEmail" class="form-control bg-light border-0" placeholder="name@example.com" required type="email" />
                    <label asp-for="AccountEmail" class="text-muted">Email Address</label>
                    <span asp-validation-for="AccountEmail" class="text-danger small"></span>
                </div>

                <div class="row g-3 mb-4">
                    <div class="col-md-6">
                        <div class="form-floating">
                            <select asp-for="AccountRole" class="form-select bg-light border-0">
                                <option value="1">Staff</option>
                                <option value="2">Lecturer</option>
                                <option value="0">Admin</option>
                            </select>
                            <label asp-for="AccountRole" class="text-muted">Role</label>
                            <span asp-validation-for="AccountRole" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="AccountPassword" type="password" class="form-control bg-light border-0" placeholder="Password" required minlength="6" />
                            <label asp-for="AccountPassword" class="text-muted">Password</label>
                            <span asp-validation-for="AccountPassword" class="text-danger small"></span>
                        </div>
                    </div>
                </div>
                
                <div class="d-flex justify-content-end gap-2 pt-2 border-top">
                    <button type="button" class="btn btn-light rounded-pill px-4 fw-medium" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary" data-requires-online="true">Create Account</button>
                </div>
            </form>
        </div>
    </div>
</div>
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

