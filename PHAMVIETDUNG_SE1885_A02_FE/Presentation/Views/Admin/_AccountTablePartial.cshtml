@model IEnumerable<PHAMVIETDUNG_SE1885_A02_FE.Presentation.ViewModels.SystemAccountViewModel>

<table class="table table-hover align-middle mb-0">
    <thead class="bg-light text-uppercase small fw-bold text-muted">
        <tr>
            <th class="ps-4 py-3 border-bottom-0">Name</th>
            <th class="py-3 border-bottom-0">Email</th>
            <th class="py-3 border-bottom-0">Role</th>
            <th class="text-end pe-4 py-3 border-bottom-0">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model) {
                <tr class="transition-row">
                    <td class="ps-4 py-3">
                        <div class="d-flex align-items-center">
                            <div class="rounded-circle bg-primary-subtle text-primary d-flex align-items-center justify-content-center fw-bold me-3 shadow-sm" style="width: 40px; height: 40px;">
                                @(item.AccountName?.Substring(0, 1).ToUpper() ?? "U")
                            </div>
                            <span class="fw-semibold text-dark">@item.AccountName</span>
                        </div>
                    </td>
                    <td class="text-muted small">
                        <i class="bi bi-envelope me-1 opacity-50"></i>@item.AccountEmail
                    </td>
                    <td>
                        @if(item.AccountRole == 1) { 
                            <span class="badge bg-info-subtle text-info-emphasis border border-info-subtle rounded-pill px-3 py-2">
                                <i class="bi bi-shield-check me-1"></i>Staff
                            </span> 
                        }
                        else if(item.AccountRole == 2) { 
                            <span class="badge bg-secondary-subtle text-secondary-emphasis border border-secondary-subtle rounded-pill px-3 py-2">
                                <i class="bi bi-book me-1"></i>Lecturer
                            </span> 
                        }
                        else if(item.AccountRole == 0) { 
                            <span class="badge bg-danger-subtle text-danger-emphasis border border-danger-subtle rounded-pill px-3 py-2">
                                <i class="bi bi-key-fill me-1"></i>Admin
                            </span> 
                        }
                        else { @item.AccountRole }
                    </td>
                    <td class="text-end pe-4">
                        <div class="d-flex justify-content-end gap-2">
                            <button type="button" onclick="loadModal('@Url.Action("Edit", "Admin", new { id = item.AccountId })', 'Edit System Account')" 
                                    class="btn btn-sm btn-white border shadow-sm hover-primary" data-bs-toggle="tooltip" title="Edit Account">
                                <i class="bi bi-pencil-fill text-warning"></i>
                            </button>
                            <a asp-action="Delete" asp-route-id="@item.AccountId" 
                               class="btn btn-sm btn-white border shadow-sm hover-danger" data-bs-toggle="tooltip" title="Delete Account"
                               onclick="return confirm('Are you sure you want to delete this account?');">
                                <i class="bi bi-trash-fill text-danger"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center py-5">
                    <div class="text-muted opacity-50 mb-2">
                        <i class="bi bi-people display-4"></i>
                    </div>
                    <h6 class="text-muted fw-bold">No accounts found</h6>
                    <p class="small text-muted mb-0">Try adjusting your search criteria.</p>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (ViewBag.TotalPages > 1)
{
    <div class="px-4 py-3 border-top bg-light-subtle d-flex justify-content-between align-items-center">
        <span class="small text-muted">Page @ViewBag.CurrentPage of @ViewBag.TotalPages</span>
        <nav aria-label="Page navigation">
            <ul class="pagination pagination-sm mb-0">
                <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link" href="#" onclick="filterAccounts(@(ViewBag.CurrentPage - 1)); return false;">
                        <i class="bi bi-chevron-left"></i>
                    </a>
                </li>
                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                        <a class="page-link" href="#" onclick="filterAccounts(@i); return false;">@i</a>
                    </li>
                }
                <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                    <a class="page-link" href="#" onclick="filterAccounts(@(ViewBag.CurrentPage + 1)); return false;">
                        <i class="bi bi-chevron-right"></i>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
}

<style>
    .btn-white { background-color: white; }
    .hover-primary:hover { border-color: var(--bs-primary) !important; color: var(--bs-primary); }
    .hover-danger:hover { border-color: var(--bs-danger) !important; background-color: var(--bs-danger); }
    .hover-danger:hover i { color: white !important; }
    .transition-row { transition: background-color 0.2s; }
    .transition-row:hover { background-color: rgba(var(--bs-primary-rgb), 0.02); }
</style>

<script>
    // Initialize tooltips dynamically when table reloads
    var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
    var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
        return new bootstrap.Tooltip(tooltipTriggerEl)
    })
</script>
